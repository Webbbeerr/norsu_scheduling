{% extends "department_head/base.html.twig" %}

{% block title %}Department Head Dashboard - Smart Scheduling System{% endblock %}

{% block main_content %}
    <!-- Welcome Section -->
    <div class="mb-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="gradient-bg px-8 py-12 text-white relative">
                <div class="absolute inset-0 bg-black bg-opacity-10"></div>
                <div class="relative">
                    <h1 class="text-3xl font-bold mb-2">Welcome back, {{ app.user.firstName }}!</h1>
                    <p class="text-lg opacity-90">{{ dashboard_data.department.name }} Department</p>
                    <p class="text-sm opacity-75 mt-1">Here's what's happening in your department today</p>
                </div>
                <div class="absolute -bottom-6 -right-6 opacity-20">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Faculty -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-primary absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Total Faculty</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.total_faculty }}</p>
                        <p class="text-sm text-green-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                            +{{ dashboard_data.this_month_faculty }} this month
                        </p>
                    </div>
                    <div class="gradient-primary p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Schedules -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="{% if dashboard_data.conflicted_schedules > 0 %}gradient-danger{% else %}gradient-success{% endif %} absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Active Schedules</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.active_schedules }}</p>
                        {% if dashboard_data.conflicted_schedules > 0 %}
                        <p class="text-sm text-red-600 mt-2 flex items-center font-semibold">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            {{ dashboard_data.conflicted_schedules }} conflict{{ dashboard_data.conflicted_schedules > 1 ? 's' : '' }}
                        </p>
                        {% else %}
                        <p class="text-sm text-green-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
                            </svg>
                            No conflicts
                        </p>
                        {% endif %}
                    </div>
                    <div class="{% if dashboard_data.conflicted_schedules > 0 %}gradient-danger{% else %}gradient-success{% endif %} p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Room Utilization -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-primary absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Room Utilization</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ dashboard_data.room_utilization }}%</p>
                        <p class="text-sm text-blue-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                            {{ dashboard_data.total_rooms }} rooms
                        </p>
                    </div>
                    <div class="gradient-primary p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 mb-8">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <a href="{{ path('department_head_faculty_create') }}" class="group p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border border-blue-100 hover:border-blue-200 transition-all duration-200 hover:shadow-md">
                <div class="gradient-primary p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Add Faculty</h3>
                <p class="text-sm text-gray-600">Register new faculty member</p>
            </a>

            <a href="{{ path('department_head_schedules_create') }}" class="group p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl border border-green-100 hover:border-green-200 transition-all duration-200 hover:shadow-md">
                <div class="gradient-success p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Create Schedule</h3>
                <p class="text-sm text-gray-600">Design new class schedule</p>
            </a>

            <a href="{{ path('department_head_settings') }}" class="group p-6 bg-gradient-to-br from-indigo-50 to-blue-50 rounded-xl border border-indigo-100 hover:border-indigo-200 transition-all duration-200 hover:shadow-md">
                <div class="bg-gradient-to-r from-indigo-500 to-blue-600 p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                </div>
                <h3 class="font-semibold text-gray-900 mb-2">Settings</h3>
                <p class="text-sm text-gray-600">Configure preferences</p>
            </a>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Schedule Conflicts Alert (if any) -->
        {% if dashboard_data.conflicted_schedules > 0 %}
        <div class="lg:col-span-2">
            <div class="bg-red-50 border-l-4 border-red-500 rounded-lg p-6 shadow-sm">
                <div class="flex items-start">
                    <div class="flex-shrink-0">
                        <svg class="h-6 w-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                    </div>
                    <div class="ml-4 flex-1">
                        <h3 class="text-lg font-semibold text-red-800 mb-2">
                            ⚠️ Schedule Conflicts Detected
                        </h3>
                        <p class="text-sm text-red-700 mb-4">
                            {{ dashboard_data.conflicted_schedules }} schedule(s) have conflicts that need to be resolved.
                        </p>
                        
                        {% if dashboard_data.conflict_details|length > 0 %}
                        <div class="space-y-3 mb-4">
                            {% for item in dashboard_data.conflict_details|slice(0, 5) %}
                            <div class="bg-white rounded-lg p-4 border border-red-200">
                                <div class="flex items-start justify-between">
                                    <div class="flex-1">
                                        <p class="font-semibold text-gray-900">
                                            {{ item.schedule.subject.code }} - {{ item.schedule.subject.title }}
                                        </p>
                                        <p class="text-sm text-gray-600">
                                            Section: {{ item.schedule.section }} | 
                                            {{ item.schedule.dayPattern }} | 
                                            {{ item.schedule.startTime|date('g:i A') }} - {{ item.schedule.endTime|date('g:i A') }} |
                                            Room: {{ item.schedule.room.code }}{% if item.schedule.room.name %} - {{ item.schedule.room.name }}{% endif %}
                                        </p>
                                        <div class="mt-2 space-y-1">
                                            {% for conflict in item.conflicts %}
                                            <p class="text-xs text-red-600">
                                                • {{ conflict.message }}
                                            </p>
                                            {% endfor %}
                                        </div>
                                    </div>
                                    <span class="ml-4 px-3 py-1 bg-red-100 text-red-700 text-xs font-semibold rounded-full">
                                        {{ item.conflict_count }} conflict{{ item.conflict_count > 1 ? 's' : '' }}
                                    </span>
                                </div>
                            </div>
                            {% endfor %}
                            {% if dashboard_data.conflict_details|length > 5 %}
                            <p class="text-sm text-red-600 text-center">
                                + {{ dashboard_data.conflict_details|length - 5 }} more conflicts
                            </p>
                            {% endif %}
                        </div>
                        {% endif %}
                        
                        <a href="{{ path('department_head_schedules') }}" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Resolve Conflicts
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        <!-- Recent Activity -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Recent Activity</h2>
                <button class="text-sm text-blue-600 hover:text-blue-700 font-medium">View all</button>
            </div>
            
            <div class="space-y-4">
                {% if dashboard_data.recent_activities|length > 0 %}
                    {% for activity in dashboard_data.recent_activities %}
                        <!-- Activity Item -->
                        <div class="flex items-start space-x-4 p-4 bg-gray-50 rounded-xl">
                            <div class="{% if activity.type == 'faculty_added' %}gradient-primary{% elseif activity.type == 'schedule_created' %}gradient-success{% elseif activity.type == 'curriculum_published' %}gradient-warning{% else %}bg-gradient-to-r from-purple-500 to-indigo-600{% endif %} p-2 rounded-lg">
                                {% if activity.icon == 'user-add' %}
                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                                    </svg>
                                {% elseif activity.icon == 'calendar' %}
                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                {% elseif activity.icon == 'document' %}
                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                {% endif %}
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900">{{ activity.title }}</p>
                                <p class="text-xs text-gray-500">{{ activity.description }}</p>
                                <p class="text-xs text-gray-400 mt-1">
                                    {% set diff = date().diff(activity.date) %}
                                    {% if diff.days == 0 %}
                                        {% if diff.h == 0 %}
                                            {% if diff.i == 0 %}
                                                Just now
                                            {% elseif diff.i == 1 %}
                                                1 minute ago
                                            {% else %}
                                                {{ diff.i }} minutes ago
                                            {% endif %}
                                        {% elseif diff.h == 1 %}
                                            1 hour ago
                                        {% else %}
                                            {{ diff.h }} hours ago
                                        {% endif %}
                                    {% elseif diff.days == 1 %}
                                        Yesterday at {{ activity.date|date('g:i A') }}
                                    {% elseif diff.days < 7 %}
                                        {{ diff.days }} days ago
                                    {% else %}
                                        {{ activity.date|date('M d, Y') }} at {{ activity.date|date('g:i A') }}
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="text-center py-8">
                        <p class="text-gray-500">No recent activity</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <!-- Faculty Workload -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8"
             x-data="facultyWorkloadTable()" x-init="init()">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Faculty Workload</h2>
                <div class="flex items-center gap-2">
                    <select x-model="workloadFilter" 
                            @change="filterData()"
                            class="px-3 py-1.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="all">All Faculty</option>
                        <option value="overloaded">Overloaded (≥100%)</option>
                        <option value="near-full">Near Full (≥85%)</option>
                        <option value="available">Available (<85%)</option>
                    </select>
                </div>
            </div>
            
            <!-- Table View -->
            <div class="overflow-x-auto">
                <table class="min-w-full">
                    <thead class="border-b border-gray-200">
                        <tr>
                            <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-50"
                                @click="sortBy('name')">
                                <div class="flex items-center gap-1">
                                    <span>Faculty</span>
                                    <span class="flex flex-col">
                                        <svg class="w-3 h-3" :class="sortField === 'name' && sortDirection === 'asc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L10 6.414l-3.293 3.293a1 1 0 01-1.414 0z"/>
                                        </svg>
                                        <svg class="w-3 h-3 -mt-1" :class="sortField === 'name' && sortDirection === 'desc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L10 13.586l3.293-3.293a1 1 0 011.414 0z"/>
                                        </svg>
                                    </span>
                                </div>
                            </th>
                            <th class="px-2 py-2 text-left text-xs font-medium text-gray-500 uppercase cursor-pointer hover:bg-gray-50"
                                @click="sortBy('percentage')">
                                <div class="flex items-center gap-1">
                                    <span>Load</span>
                                    <span class="flex flex-col">
                                        <svg class="w-3 h-3" :class="sortField === 'percentage' && sortDirection === 'asc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M5.293 9.707a1 1 0 010-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 01-1.414 1.414L10 6.414l-3.293 3.293a1 1 0 01-1.414 0z"/>
                                        </svg>
                                        <svg class="w-3 h-3 -mt-1" :class="sortField === 'percentage' && sortDirection === 'desc' ? 'text-blue-600' : 'text-gray-400'" fill="currentColor" viewBox="0 0 20 20">
                                            <path d="M14.707 10.293a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 111.414-1.414L10 13.586l3.293-3.293a1 1 0 011.414 0z"/>
                                        </svg>
                                    </span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <template x-if="filteredData.length === 0">
                            <tr>
                                <td colspan="2" class="px-2 py-8 text-center text-sm text-gray-500">
                                    No faculty members found
                                </td>
                            </tr>
                        </template>
                        
                        <template x-for="load in filteredData.slice(0, 10)" :key="load.id">
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-2 py-3">
                                    <div class="flex items-center space-x-3">
                                        <div 
                                            class="h-8 w-8 rounded-full flex items-center justify-center text-white text-xs font-medium flex-shrink-0"
                                            :class="{
                                                'bg-gradient-to-br from-red-500 to-red-600': load.percentage >= 100,
                                                'bg-gradient-to-br from-yellow-500 to-yellow-600': load.percentage >= 85 && load.percentage < 100,
                                                'bg-gradient-to-br from-green-500 to-green-600': load.percentage < 85
                                            }"
                                            x-text="load.initials">
                                        </div>
                                        <div class="min-w-0 flex-1">
                                            <p class="text-sm font-medium text-gray-900 truncate" x-text="load.name"></p>
                                            <p class="text-xs text-gray-500">
                                                <span x-text="load.current_load"></span>/<span x-text="load.max_load"></span> hrs
                                                <span class="ml-1" :class="{
                                                    'text-red-600 font-semibold': load.percentage >= 100,
                                                    'text-yellow-600 font-semibold': load.percentage >= 85 && load.percentage < 100,
                                                    'text-green-600': load.percentage < 85
                                                }">
                                                    (<span x-text="Math.round(load.percentage)"></span>%)
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-2 py-3">
                                    <div class="flex items-center gap-2">
                                        <div class="flex-1 bg-gray-200 rounded-full h-2 min-w-[60px]">
                                            <div 
                                                class="h-2 rounded-full transition-all duration-300"
                                                :class="{
                                                    'bg-gradient-to-r from-red-500 to-red-600': load.percentage >= 100,
                                                    'bg-gradient-to-r from-yellow-500 to-yellow-600': load.percentage >= 85 && load.percentage < 100,
                                                    'bg-gradient-to-r from-green-500 to-green-600': load.percentage < 85
                                                }"
                                                :style="`width: ${Math.min(load.percentage, 100)}%`">
                                            </div>
                                        </div>
                                        <span 
                                            class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium"
                                            :class="{
                                                'bg-red-100 text-red-800': load.percentage >= 100,
                                                'bg-yellow-100 text-yellow-800': load.percentage >= 85 && load.percentage < 100,
                                                'bg-green-100 text-green-800': load.percentage < 85
                                            }">
                                            <template x-if="load.percentage >= 100">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                </svg>
                                            </template>
                                            <template x-if="load.percentage >= 85 && load.percentage < 100">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                                                </svg>
                                            </template>
                                            <template x-if="load.percentage < 85">
                                                <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                                                </svg>
                                            </template>
                                            <span x-text="load.statusLabel"></span>
                                        </span>
                                    </div>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>

            <!-- Show more link if there are more than 10 items -->
            <template x-if="filteredData.length > 10">
                <div class="mt-4 text-center">
                    <p class="text-sm text-gray-500">
                        Showing <span x-text="Math.min(10, filteredData.length)"></span> of <span x-text="filteredData.length"></span> faculty members
                    </p>
                </div>
            </template>

            <a href="{{ path('department_head_reports_faculty_workload') }}" class="block w-full mt-6 text-center text-sm text-blue-600 hover:text-blue-700 font-medium py-2 border border-blue-200 rounded-xl hover:bg-blue-50 transition-colors duration-200">
                View Detailed Workload Report
            </a>
        </div>

        <script>
            function facultyWorkloadTable() {
                return {
                    allData: [],
                    filteredData: [],
                    workloadFilter: 'all',
                    sortField: 'percentage',
                    sortDirection: 'desc',
                    
                    init() {
                        this.allData = [
                            {% if dashboard_data.faculty_loads|length > 0 %}
                                {% for load_data in dashboard_data.faculty_loads %}
                                {
                                    id: {{ load_data.faculty.id }},
                                    name: '{{ load_data.faculty.firstName|e('js') }} {{ load_data.faculty.lastName|e('js') }}',
                                    initials: '{{ load_data.faculty.firstName|first }}{{ load_data.faculty.lastName|first }}',
                                    current_load: {{ load_data.current_load }},
                                    max_load: {{ load_data.max_load }},
                                    percentage: {{ load_data.percentage }},
                                    statusLabel: {{ load_data.percentage >= 100 ? '"Full"' : (load_data.percentage >= 85 ? '"Near"' : '"OK"') }}
                                },
                                {% endfor %}
                            {% endif %}
                        ];
                        this.filterData();
                    },
                    
                    filterData() {
                        let filtered = [...this.allData];
                        
                        // Apply workload filter
                        if (this.workloadFilter === 'overloaded') {
                            filtered = filtered.filter(f => f.percentage >= 100);
                        } else if (this.workloadFilter === 'near-full') {
                            filtered = filtered.filter(f => f.percentage >= 85 && f.percentage < 100);
                        } else if (this.workloadFilter === 'available') {
                            filtered = filtered.filter(f => f.percentage < 85);
                        }
                        
                        // Apply sorting
                        filtered.sort((a, b) => {
                            let aVal = a[this.sortField];
                            let bVal = b[this.sortField];
                            
                            if (typeof aVal === 'string') aVal = aVal.toLowerCase();
                            if (typeof bVal === 'string') bVal = bVal.toLowerCase();
                            
                            if (aVal < bVal) return this.sortDirection === 'asc' ? -1 : 1;
                            if (aVal > bVal) return this.sortDirection === 'asc' ? 1 : -1;
                            return 0;
                        });
                        
                        this.filteredData = filtered;
                    },
                    
                    sortBy(field) {
                        if (this.sortField === field) {
                            this.sortDirection = this.sortDirection === 'asc' ? 'desc' : 'asc';
                        } else {
                            this.sortField = field;
                            this.sortDirection = field === 'percentage' ? 'desc' : 'asc';
                        }
                        this.filterData();
                    }
                };
            }
        </script>
    </div>
{% endblock %}