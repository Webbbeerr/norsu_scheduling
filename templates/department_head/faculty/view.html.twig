{% extends 'department_head/base.html.twig' %}

{% block main_content %}
<div class="p-6 lg:p-8">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <div class="flex items-center space-x-4 mb-4">
                    <a href="{{ path('department_head_faculty') }}" class="inline-flex items-center text-gray-600 hover:text-gray-900">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Faculty List
                    </a>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">Faculty Details</h1>
                <p class="mt-2 text-sm text-gray-600">Complete information for {{ user.fullName }}</p>
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('department_head_faculty_edit', {id: user.id}) }}" 
                   class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm transition-colors duration-200">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit Faculty
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Profile Card -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex flex-col items-center">
                    <div class="h-32 w-32 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center text-white font-bold text-4xl shadow-lg">
                        {{ user.firstName[:1] }}{{ user.lastName[:1] }}
                    </div>
                    <h2 class="mt-4 text-2xl font-bold text-gray-900 text-center">{{ user.fullName }}</h2>
                    <p class="text-gray-600 text-center">{{ user.position ?? 'Faculty Member' }}</p>
                    
                    <div class="mt-4 w-full">
                        {% if user.isActive %}
                            <span class="inline-flex items-center justify-center w-full px-3 py-2 rounded-lg text-sm font-medium bg-green-100 text-green-800">
                                <svg class="mr-2 h-3 w-3 fill-current" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3"/>
                                </svg>
                                Active Account
                            </span>
                        {% else %}
                            <span class="inline-flex items-center justify-center w-full px-3 py-2 rounded-lg text-sm font-medium bg-red-100 text-red-800">
                                <svg class="mr-2 h-3 w-3 fill-current" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3"/>
                                </svg>
                                Inactive Account
                            </span>
                        {% endif %}
                    </div>

                    <div class="mt-6 w-full pt-6 border-t border-gray-200">
                        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-3">Quick Actions</h3>
                        <div class="space-y-2">
                            <a href="{{ path('department_head_faculty_edit', {id: user.id}) }}" 
                               class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit Information
                            </a>

                            {% if user.isActive %}
                                <form method="post" action="{{ path('department_head_faculty_deactivate', {id: user.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to deactivate this faculty member?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('deactivate_user_' ~ user.id) }}">
                                    <button type="submit" 
                                            class="w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-lg text-red-700 bg-red-50 hover:bg-red-100 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                        </svg>
                                        Deactivate Account
                                    </button>
                                </form>
                            {% else %}
                                <form method="post" action="{{ path('department_head_faculty_activate', {id: user.id}) }}" 
                                      onsubmit="return confirm('Are you sure you want to activate this faculty member?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('activate_user_' ~ user.id) }}">
                                    <button type="submit" 
                                            class="w-full inline-flex items-center justify-center px-4 py-2 border border-green-300 rounded-lg text-green-700 bg-green-50 hover:bg-green-100 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                        Activate Account
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Details Cards -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Personal Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    Personal Information
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm font-medium text-gray-500">First Name</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.firstName }}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Last Name</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.lastName }}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Email Address</p>
                        <p class="mt-1 text-base text-gray-900">
                            <a href="mailto:{{ user.email }}" class="text-blue-600 hover:text-blue-700">{{ user.email }}</a>
                        </p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Employee ID</p>
                        <p class="mt-1 text-base text-gray-900 font-mono">{{ user.employeeId }}</p>
                    </div>
                </div>
            </div>

            <!-- Account Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                    </svg>
                    Account Information
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Username</p>
                        <p class="mt-1 text-base text-gray-900 font-mono">{{ user.username }}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Role</p>
                        <p class="mt-1 text-base text-gray-900">Faculty</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Account Status</p>
                        <p class="mt-1">
                            {% if user.isActive %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Active
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                    Inactive
                                </span>
                            {% endif %}
                        </p>
                    </div>
                    {% if user.lastLogin %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Last Login</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.lastLogin|date('M d, Y h:i A') }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Professional Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                    </svg>
                    Professional Information
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Position/Title</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.position ?? 'Not specified' }}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Department</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.department.name }}</p>
                    </div>
                    {% if user.college %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">College</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.college.name }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- System Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    System Information
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Account Created</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.createdAt|date('F d, Y h:i A') }}</p>
                    </div>
                    {% if user.updatedAt %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Last Updated</p>
                        <p class="mt-1 text-base text-gray-900">{{ user.updatedAt|date('F d, Y h:i A') }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
