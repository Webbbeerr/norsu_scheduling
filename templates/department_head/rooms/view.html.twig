{% extends 'department_head/base.html.twig' %}

{% block title %}{{ room.name }} - Room Details{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">{{ room.name }}</h1>
                <p class="mt-2 text-sm text-gray-600">Room Code: {{ room.code }}</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('department_head_rooms_edit', {id: room.id}) }}" 
                   class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit Room
                </a>
                <a href="{{ path('department_head_rooms') }}" 
                   class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Rooms
                </a>
            </div>
        </div>
    </div>

    <!-- Room Details Card -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden mb-6">
        <div class="px-8 py-6 bg-gradient-to-r from-blue-600 to-blue-700">
            <h2 class="text-xl font-semibold text-white">Room Information</h2>
        </div>

        <div class="p-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Room Code -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Room Code</label>
                    <p class="text-lg font-medium text-gray-900">{{ room.code }}</p>
                </div>

                <!-- Room Name -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Room Name</label>
                    <p class="text-lg font-medium text-gray-900">{{ room.name }}</p>
                </div>

                <!-- Type -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Type</label>
                    {% if room.type %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{ room.typeBadgeClass }}">
                            {{ room.typeIcon }} {{ room.type|title }}
                        </span>
                    {% else %}
                        <p class="text-gray-400">Not specified</p>
                    {% endif %}
                </div>

                <!-- Capacity -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Capacity</label>
                    <p class="text-lg font-medium text-gray-900">
                        {% if room.capacity %}
                            {{ room.capacity }} persons
                        {% else %}
                            <span class="text-gray-400">Not specified</span>
                        {% endif %}
                    </p>
                </div>

                <!-- Building -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Building</label>
                    <p class="text-lg font-medium text-gray-900">{{ room.building ?? 'Not specified' }}</p>
                </div>

                <!-- Floor -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Floor</label>
                    <p class="text-lg font-medium text-gray-900">{{ room.floor ?? 'Not specified' }}</p>
                </div>

                <!-- Status -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Status</label>
                    {% if room.isActive %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-green-100 text-green-800">
                            <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            Active
                        </span>
                    {% else %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-semibold bg-red-100 text-red-800">
                            <svg class="mr-1.5 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                            </svg>
                            Inactive
                        </span>
                    {% endif %}
                </div>

                <!-- Department -->
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">Department</label>
                    <p class="text-lg font-medium text-gray-900">
                        {{ room.department ? room.department.name : 'Not assigned' }}
                    </p>
                </div>
            </div>

            <!-- Equipment -->
            {% if room.equipment %}
                <div class="mt-6 pt-6 border-t border-gray-200">
                    <label class="block text-sm font-medium text-gray-500 mb-2">Equipment & Facilities</label>
                    <div class="bg-gray-50 rounded-lg p-4">
                        <p class="text-gray-700 whitespace-pre-line">{{ room.equipment }}</p>
                    </div>
                </div>
            {% endif %}

            <!-- Metadata -->
            <div class="mt-6 pt-6 border-t border-gray-200">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm text-gray-500">
                    <div>
                        <span class="font-medium">Created:</span>
                        {{ room.createdAt ? room.createdAt|date('F j, Y g:i A') : 'N/A' }}
                    </div>
                    <div>
                        <span class="font-medium">Last Updated:</span>
                        {{ room.updatedAt ? room.updatedAt|date('F j, Y g:i A') : 'Never' }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
