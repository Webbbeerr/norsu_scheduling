{% extends 'department_head/base.html.twig' %}

{% block title %}Edit Room - {{ room.name }}{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Edit Room</h1>
                <p class="mt-2 text-sm text-gray-600">Update room information for {{ room.name }}</p>
            </div>
            <div>
                <a href="{{ path('department_head_rooms') }}" 
                   class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Rooms
                </a>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 bg-gradient-to-r from-indigo-600 to-indigo-700">
                <h2 class="text-xl font-semibold text-white">Room Information</h2>
                <p class="text-indigo-100 text-sm mt-1">Update the details below</p>
            </div>

            <div class="p-8">
                {{ form_start(form, {'action': path('department_head_rooms_edit', {'id': room.id}), 'attr': {'class': 'space-y-6', 'autocomplete': 'off'}}) }}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Room Code -->
                    <div>
                        <label for="{{ form.code.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Room Code <span class="text-red-500">*</span>
                        </label>
                        {{ form_widget(form.code, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                                'placeholder': 'e.g., RM-101'
                            }
                        }) }}
                        {{ form_errors(form.code) }}
                    </div>

                    <!-- Room Name -->
                    <div>
                        <label for="{{ form.name.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Room Name
                        </label>
                        {{ form_widget(form.name, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                                'placeholder': 'e.g., Computer Laboratory 1'
                            }
                        }) }}
                        {{ form_errors(form.name) }}
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Department -->
                    <div>
                        <label for="{{ form.department.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Department <span class="text-red-500">*</span>
                        </label>
                        {{ form_widget(form.department, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150'
                            }
                        }) }}
                        {{ form_errors(form.department) }}
                        <p class="mt-1 text-sm text-gray-500">Department that owns this room</p>
                    </div>

                    <!-- Room Type -->
                    <div>
                        <label for="{{ form.type.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Room Type
                        </label>
                        {{ form_widget(form.type, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150'
                            }
                        }) }}
                        {{ form_errors(form.type) }}
                    </div>

                    <!-- Capacity -->
                    <div>
                        <label for="{{ form.capacity.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Capacity
                        </label>
                        {{ form_widget(form.capacity, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                                'placeholder': 'Number of seats'
                            }
                        }) }}
                        {{ form_errors(form.capacity) }}
                    </div>

                    <!-- Building -->
                    <div>
                        <label for="{{ form.building.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Building
                        </label>
                        {{ form_widget(form.building, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                                'placeholder': 'e.g., Main Building'
                            }
                        }) }}
                        {{ form_errors(form.building) }}
                    </div>

                    <!-- Floor -->
                    <div>
                        <label for="{{ form.floor.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                            Floor
                        </label>
                        {{ form_widget(form.floor, {
                            'attr': {
                                'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                                'placeholder': 'e.g., 1st Floor, Ground Floor'
                            }
                        }) }}
                        {{ form_errors(form.floor) }}
                    </div>
                </div>

                <!-- Equipment -->
                <div>
                    <label for="{{ form.equipment.vars.id }}" class="block text-sm font-medium text-gray-700 mb-2">
                        Equipment & Facilities
                    </label>
                    {{ form_widget(form.equipment, {
                        'attr': {
                            'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-150',
                            'rows': '4',
                            'placeholder': 'List available equipment and facilities...'
                        }
                    }) }}
                    {{ form_errors(form.equipment) }}
                </div>

                <!-- Form Actions -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('department_head_rooms') }}" 
                       class="px-6 py-3 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-6 py-3 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow-sm transition duration-150">
                        <svg class="inline-block mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Update Room
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
