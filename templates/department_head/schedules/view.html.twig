{% extends 'department_head/base.html.twig' %}

{% block title %}View Schedule - {{ schedule.subject.title }}{% endblock %}

{% block main_content %}
<div class="p-6 lg:p-8">
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <div class="flex items-center space-x-4 mb-4">
                    <a href="{{ path('department_head_schedules') }}" class="inline-flex items-center text-gray-600 hover:text-gray-900">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                        </svg>
                        Back to Schedules
                    </a>
                </div>
                <h1 class="text-3xl font-bold text-gray-900">Schedule Details</h1>
                <p class="mt-2 text-sm text-gray-600">{{ schedule.subject.title }} - {{ schedule.subject.code }}</p>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column - Schedule Summary Card -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex flex-col items-center">
                    <div class="h-24 w-24 rounded-full bg-gradient-to-br from-indigo-400 to-indigo-600 flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                        {{ schedule.subject.code[:3] }}
                    </div>
                    <h2 class="mt-4 text-xl font-bold text-gray-900 text-center">{{ schedule.subject.title }}</h2>
                    <p class="text-gray-600 text-center text-sm">{{ schedule.subject.code }}-{{ schedule.section }}</p>
                    
                    <div class="mt-4 w-full">
                        {% if schedule.status == 'active' %}
                            <span class="inline-flex items-center justify-center w-full px-3 py-2 rounded-lg text-sm font-medium bg-green-100 text-green-800">
                                <svg class="mr-2 h-3 w-3 fill-current" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3"/>
                                </svg>
                                Active Schedule
                            </span>
                        {% else %}
                            <span class="inline-flex items-center justify-center w-full px-3 py-2 rounded-lg text-sm font-medium bg-red-100 text-red-800">
                                <svg class="mr-2 h-3 w-3 fill-current" viewBox="0 0 8 8">
                                    <circle cx="4" cy="4" r="3"/>
                                </svg>
                                Inactive Schedule
                            </span>
                        {% endif %}
                    </div>

                    {% if schedule.isConflicted %}
                    <div class="mt-4 w-full">
                        <div class="bg-red-50 border border-red-200 rounded-lg p-3">
                            <div class="flex items-start">
                                <svg class="w-5 h-5 text-red-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                                </svg>
                                <div>
                                    <h3 class="text-sm font-semibold text-red-800">Conflict Detected</h3>
                                    <p class="text-xs text-red-700 mt-1">Schedule has conflicts</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <div class="mt-6 w-full pt-6 border-t border-gray-200">
                        <h3 class="text-sm font-semibold text-gray-900 uppercase tracking-wide mb-3">Quick Actions</h3>
                        <div class="space-y-2">
                            {% if schedule.status == 'active' %}
                                <form action="{{ path('department_head_schedules_deactivate', {'id': schedule.id}) }}" method="post" 
                                    onsubmit="return confirm('Are you sure you want to deactivate this schedule?')">
                                    <input type="hidden" name="_token" value="{{ csrf_token('deactivate_schedule') }}">
                                    <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 rounded-lg text-red-700 bg-red-50 hover:bg-red-100 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                        </svg>
                                        Deactivate Schedule
                                    </button>
                                </form>
                            {% else %}
                                <form action="{{ path('department_head_schedules_activate', {'id': schedule.id}) }}" method="post">
                                    <input type="hidden" name="_token" value="{{ csrf_token('activate_schedule') }}">
                                    <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-green-300 rounded-lg text-green-700 bg-green-50 hover:bg-green-100 transition-colors duration-200">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                        </svg>
                                        Activate Schedule
                                    </button>
                                </form>
                            {% endif %}

                            <form action="{{ path('department_head_schedules_delete', {'id': schedule.id}) }}" method="post"
                                onsubmit="return confirm('Are you sure you want to permanently delete this schedule? This action cannot be undone.')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_schedule') }}">
                                <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                    Delete Schedule
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Schedule Information -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Basic Information Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Schedule Information</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Academic Year & Semester -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Academic Period</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.academicYear.year }}</p>
                            <p class="text-sm text-gray-600">{{ schedule.semester }} Semester</p>
                        </div>

                        <!-- Section -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Section</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.section|default('Not Assigned') }}</p>
                        </div>

                        <!-- Room -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Room</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.room.code }}</p>
                            <p class="text-sm text-gray-600">{{ schedule.room.name }}</p>
                            <p class="text-xs text-gray-500 mt-1">
                                {% if schedule.room.building %}{{ schedule.room.building }} â€¢ {% endif %}
                                Capacity: {{ schedule.room.capacity }}
                            </p>
                        </div>

                        <!-- Faculty -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Faculty</label>
                            {% if schedule.faculty %}
                                <p class="text-base font-semibold text-gray-900">{{ schedule.faculty.fullName }}</p>
                                <p class="text-sm text-gray-600">{{ schedule.faculty.email }}</p>
                            {% else %}
                                <p class="text-sm text-gray-500 italic">To Be Assigned</p>
                            {% endif %}
                        </div>

                        <!-- Schedule Pattern -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Schedule</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.dayPatternLabel }}</p>
                            <p class="text-sm text-gray-600">{{ schedule.startTime|date('g:i A') }} - {{ schedule.endTime|date('g:i A') }}</p>
                        </div>

                        <!-- Enrollment -->
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Enrollment</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.enrolledStudents }} Students</p>
                            <div class="mt-2 bg-gray-200 rounded-full h-2">
                                {% set enrollmentPercentage = (schedule.enrolledStudents / schedule.room.capacity * 100)|round %}
                                <div class="h-2 rounded-full 
                                    {% if enrollmentPercentage >= 90 %}
                                        bg-red-500
                                    {% elseif enrollmentPercentage >= 70 %}
                                        bg-yellow-500
                                    {% else %}
                                        bg-green-500
                                    {% endif %}"
                                    style="width: {{ enrollmentPercentage > 100 ? 100 : enrollmentPercentage }}%">
                                </div>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">{{ enrollmentPercentage }}% of room capacity</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes Card -->
            {% if schedule.notes %}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Notes</h3>
                </div>
                <div class="p-6">
                    <p class="text-gray-700">{{ schedule.notes }}</p>
                </div>
            </div>
            {% endif %}

            <!-- Curriculum Information Card -->
            {% if schedule.curriculumSubject %}
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Curriculum Information</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Year Level</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.curriculumSubject.yearLevel }}</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500 mb-1">Units</label>
                            <p class="text-base font-semibold text-gray-900">{{ schedule.curriculumSubject.units }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            <!-- Timestamps Card -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Record Information</h3>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                        <div>
                            <label class="block text-gray-500 mb-1">Created</label>
                            <p class="text-gray-900 font-medium">{{ schedule.createdAt|date('M d, Y g:i A') }}</p>
                        </div>
                        {% if schedule.updatedAt %}
                        <div>
                            <label class="block text-gray-500 mb-1">Last Updated</label>
                            <p class="text-gray-900 font-medium">{{ schedule.updatedAt|date('M d, Y g:i A') }}</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
