{% extends 'admin/base.html.twig' %}

{% block title %}{{ department.name }} - Curricula{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <a href="{{ path('admin_curricula') }}" 
                   class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
                    <svg class="h-6 w-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">{{ department.name }}</h1>
                    <p class="mt-2 text-sm text-gray-600">
                        {{ department.code }} â€¢ {{ department.college ? department.college.name : 'No College' }}
                    </p>
                </div>
            </div>
            <div class="flex items-center space-x-3">
                <button onclick="openUploadModal()" 
                   class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white text-base font-medium rounded-lg shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                    </svg>
                    Upload Curriculum
                </button>
                <a href="{{ path('admin_curricula_create', {department_id: department.id}) }}" 
                   class="inline-flex items-center px-6 py-3 bg-orange-600 hover:bg-orange-700 text-white text-base font-medium rounded-lg shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add Curriculum
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Curricula -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Total Curricula</p>
                    <p class="text-3xl font-bold text-gray-900 mt-2">{{ statistics.total ?? 0 }}</p>
                </div>
                <div class="p-3 bg-orange-100 rounded-lg">
                    <svg class="h-8 w-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Published Curricula -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Published</p>
                    <p class="text-3xl font-bold text-green-600 mt-2">{{ statistics.published ?? 0 }}</p>
                </div>
                <div class="p-3 bg-green-100 rounded-lg">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>
        </div>

        <!-- Draft Curricula -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Draft</p>
                    <p class="text-3xl font-bold text-yellow-600 mt-2">{{ statistics.draft ?? 0 }}</p>
                </div>
                <div class="p-3 bg-yellow-100 rounded-lg">
                    <svg class="h-8 w-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Semester Filter -->
    {% if curricula is not empty %}
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h3 class="text-lg font-semibold text-gray-900 mb-1">Filter by Semester</h3>
                <p class="text-sm text-gray-600">
                    {% if selectedSemester %}
                        <span class="font-semibold text-purple-700">ðŸ”’ Active Filter: {{ selectedSemester }} Semester</span> - Click "All Semesters" to clear
                    {% else %}
                        Select a semester to filter subjects in Subject Management
                    {% endif %}
                </p>
            </div>
            <div class="flex gap-2">
                <a href="{{ path('admin_curricula_clear_semester_filter', {departmentId: department.id}) }}" 
                   class="semester-filter-btn px-6 py-3 {% if selectedSemester is null %}bg-gray-700 text-white{% else %}bg-white text-gray-700 border-2 border-gray-300{% endif %} rounded-lg font-medium {% if selectedSemester is null %}hover:bg-gray-800{% else %}hover:bg-gray-50{% endif %} transition duration-150 shadow-sm">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    All Semesters
                </a>
                <a href="{{ path('admin_curricula_by_department_semester', {departmentId: department.id, semester: '1st'}) }}" 
                   class="semester-filter-btn px-6 py-3 {% if selectedSemester == '1st' %}bg-blue-600 text-white{% else %}bg-white text-gray-700 border-2 border-gray-300{% endif %} rounded-lg font-medium {% if selectedSemester == '1st' %}hover:bg-blue-700{% else %}hover:bg-gray-50{% endif %} transition duration-150 shadow-sm">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    1st Semester
                </a>
                <a href="{{ path('admin_curricula_by_department_semester', {departmentId: department.id, semester: '2nd'}) }}" 
                   class="semester-filter-btn px-6 py-3 {% if selectedSemester == '2nd' %}bg-green-600 text-white{% else %}bg-white text-gray-700 border-2 border-gray-300{% endif %} rounded-lg font-medium {% if selectedSemester == '2nd' %}hover:bg-green-700{% else %}hover:bg-gray-50{% endif %} transition duration-150 shadow-sm">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    2nd Semester
                </a>
                <a href="{{ path('admin_curricula_by_department_semester', {departmentId: department.id, semester: 'Summer'}) }}" 
                   class="semester-filter-btn px-6 py-3 {% if selectedSemester == 'Summer' %}bg-yellow-500 text-white{% else %}bg-white text-gray-700 border-2 border-gray-300{% endif %} rounded-lg font-medium {% if selectedSemester == 'Summer' %}hover:bg-yellow-600{% else %}hover:bg-gray-50{% endif %} transition duration-150 shadow-sm">
                    <svg class="w-5 h-5 inline-block mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    Summer
                </a>
            </div>
        </div>
    </div>
    {% endif %}

    <!-- Default View: Show curricula list -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-5 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Curricula List</h2>
                <div class="flex items-center space-x-3">
                    <!-- Search -->
                    <div class="relative w-80">
                        <input type="text" 
                               id="searchInput" 
                               class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                               placeholder="Search...">
                    </div>
                    
                    <!-- Status Filter -->
                    <select id="statusFilter" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500">
                        <option value="">All Status</option>
                        <option value="published">Published</option>
                        <option value="draft">Draft</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="divide-y divide-gray-200">
            {% if curricula is empty %}
                <div class="text-center py-16">
                    <svg class="mx-auto h-16 w-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                    <h3 class="mt-4 text-lg font-medium text-gray-900">No curricula yet</h3>
                    <p class="mt-2 text-sm text-gray-500">Get started by creating a curriculum for this department.</p>
                    <div class="mt-6">
                        <a href="{{ path('admin_curricula_create', {department_id: department.id}) }}" 
                           class="inline-flex items-center px-4 py-2 bg-orange-600 hover:bg-orange-700 text-white text-sm font-medium rounded-lg">
                            <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            Add Curriculum
                        </a>
                    </div>
                </div>
            {% else %}
                {% for curriculum in curricula %}
                    <div class="curriculum-item p-6 hover:bg-gray-50 transition-colors" data-status="{{ curriculum.isPublished ? 'published' : 'draft' }}">
                        <div class="flex items-center justify-between">
                            <div class="flex-1">
                                <div class="flex items-center space-x-3">
                                    <h3 class="text-lg font-semibold text-gray-900">{{ curriculum.name }}</h3>
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        v{{ curriculum.version ?? 1 }}
                                    </span>
                                    {% if curriculum.isPublished %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                            <span class="mr-1 h-1.5 w-1.5 rounded-full bg-green-500"></span>
                                            Published
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                            <span class="mr-1 h-1.5 w-1.5 rounded-full bg-yellow-500"></span>
                                            Draft
                                        </span>
                                    {% endif %}
                                </div>
                                {% if curriculum.notes %}
                                    <p class="mt-2 text-sm text-gray-600">{{ curriculum.notes }}</p>
                                {% endif %}
                                <p class="mt-2 text-xs text-gray-500">Created {{ curriculum.createdAt|date('M d, Y') }}</p>
                            </div>

                            <div class="flex items-center space-x-2">
                                <!-- View -->
                                <a href="{{ path('admin_curricula_view', {id: curriculum.id}) }}" 
                                   class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition" 
                                   title="View Details">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                                    </svg>
                                </a>

                                <!-- Manage Subjects -->
                                <a href="{{ path('admin_curriculum_subjects', {id: curriculum.id}) }}" 
                                   class="p-2 text-green-600 hover:bg-green-50 rounded-lg transition" 
                                   title="Manage Subjects">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                                    </svg>
                                </a>

                                <!-- Edit -->
                                <a href="{{ path('admin_curricula_edit', {id: curriculum.id}) }}" 
                                   class="p-2 text-orange-600 hover:bg-orange-50 rounded-lg transition" 
                                   title="Edit">
                                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                    </svg>
                                </a>

                                <!-- Toggle Publish -->
                                <form action="{{ path('admin_curricula_toggle_publish', {id: curriculum.id}) }}" method="POST" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('toggle_publish_curriculum_' ~ curriculum.id) }}">
                                    <button type="submit" 
                                            class="p-2 text-green-600 hover:bg-green-50 rounded-lg transition" 
                                            title="{{ curriculum.isPublished ? 'Unpublish' : 'Publish' }}">
                                        {% if curriculum.isPublished %}
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                            </svg>
                                        {% else %}
                                            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        {% endif %}
                                    </button>
                                </form>

                                <!-- Delete -->
                                <form action="{{ path('admin_curricula_delete', {id: curriculum.id}) }}" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this curriculum?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_curriculum_' ~ curriculum.id) }}">
                                    <button type="submit" 
                                            class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition" 
                                            title="Delete">
                                        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                        </svg>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <!-- Upload Curriculum Modal -->
    <div id="uploadModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-0 border-0 w-11/12 max-w-3xl shadow-2xl rounded-xl bg-white">
            <!-- Modal Header -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-blue-100">
                <div>
                    <h3 class="text-2xl font-bold text-blue-900">Upload Curriculum</h3>
                    <p class="text-sm text-blue-700 mt-1">Import curriculum for {{ department.name }}</p>
                </div>
                <button onclick="closeUploadModal()" class="text-gray-400 hover:text-gray-600 transition">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            <!-- Modal Body -->
            <div class="p-6">
                <!-- Curriculum Name -->
                <div class="mb-5">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Curriculum Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="curriculumName" 
                           placeholder="e.g., Bachelor of Science in Computer Science"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                    <p class="mt-1 text-xs text-gray-500">Enter the full curriculum name</p>
                </div>

                <!-- Version -->
                <div class="mb-5">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Version <span class="text-red-500">*</span>
                    </label>
                    <input type="number" id="curriculumVersion" min="1" value="1"
                           class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                    <p class="mt-1 text-xs text-gray-500">Curriculum version number</p>
                </div>

                <!-- File Upload -->
                <div class="mb-5">
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Upload Curriculum File <span class="text-red-500">*</span>
                    </label>
                    <div class="border-2 border-dashed border-gray-300 rounded-lg p-6 text-center hover:border-blue-400 transition">
                        <input type="file" id="fileInput" accept=".csv,.xlsx,.xls" onchange="handleFileSelect(event)" class="hidden">
                        <label for="fileInput" class="cursor-pointer">
                            <div class="text-blue-600 hover:text-blue-700">
                                <svg class="mx-auto h-12 w-12 mb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                                </svg>
                                <p class="text-sm font-medium">Click to upload or drag and drop</p>
                                <p class="text-xs text-gray-500 mt-1">CSV or Excel file (Max 10MB)</p>
                            </div>
                        </label>
                        <p id="selectedFileName" class="mt-3 text-sm text-gray-700 font-medium"></p>
                        <button type="button" onclick="clearFile()" class="mt-2 text-xs text-red-600 hover:text-red-700 hidden">Clear file</button>
                    </div>
                    <a href="{{ path('admin_curriculum_download_template') }}" class="inline-flex items-center text-sm text-blue-600 hover:text-blue-800 mt-2">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                        </svg>
                        Download Template
                    </a>
                </div>

                <!-- Options -->
                <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
                    <label class="flex items-start cursor-pointer">
                        <input type="checkbox" id="autoCreateTerms" checked class="mt-1 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                        <div class="ml-3">
                            <span class="text-sm font-medium text-gray-900">Auto-create terms</span>
                            <p class="text-xs text-gray-600 mt-1">Automatically create curriculum terms if they don't exist</p>
                        </div>
                    </label>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="flex justify-end items-center space-x-3 p-6 border-t border-gray-200 bg-gray-50">
                <button type="button" onclick="closeUploadModal()" 
                        class="px-6 py-3 bg-white border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 font-medium transition">
                    Cancel
                </button>
                <button type="button" id="uploadBtn" onclick="uploadCurriculum()" disabled
                        class="px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-lg hover:from-blue-700 hover:to-blue-800 font-medium transition shadow-md disabled:opacity-50 disabled:cursor-not-allowed">
                    <span class="flex items-center">
                        <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"/>
                        </svg>
                        Upload & Create
                    </span>
                </button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Upload Modal Functions (defined at global scope for onclick handlers)
        let selectedFile = null;

        function openUploadModal() {
            document.getElementById('uploadModal').classList.remove('hidden');
            clearFile();
        }

        function closeUploadModal() {
            document.getElementById('uploadModal').classList.add('hidden');
            clearFile();
            document.getElementById('curriculumName').value = '';
            document.getElementById('curriculumVersion').value = '';
        }

        function handleFileSelect(event) {
            const file = event.target.files[0];
            if (!file) return;

            // Validate file type
            const validTypes = [
                'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet',
                'application/vnd.ms-excel',
                'text/csv'
            ];

            if (!validTypes.includes(file.type) && !file.name.endsWith('.csv')) {
                alert('Please upload a valid Excel or CSV file.');
                event.target.value = '';
                return;
            }

            // Validate file size (10MB max)
            const maxSize = 10 * 1024 * 1024;
            if (file.size > maxSize) {
                alert('File size must be less than 10MB.');
                event.target.value = '';
                return;
            }

            selectedFile = file;
            const fileSize = (file.size / 1024).toFixed(2);
            document.getElementById('selectedFileName').textContent = `${file.name} (${fileSize} KB)`;
            updateUploadButton();
        }

        function clearFile() {
            selectedFile = null;
            const fileInput = document.getElementById('fileInput');
            const fileName = document.getElementById('selectedFileName');
            if (fileInput) fileInput.value = '';
            if (fileName) fileName.textContent = '';
            updateUploadButton();
        }

        function updateUploadButton() {
            const nameInput = document.getElementById('curriculumName');
            const versionInput = document.getElementById('curriculumVersion');
            const uploadBtn = document.getElementById('uploadBtn');

            if (!nameInput || !versionInput || !uploadBtn) return;

            const isValid = nameInput.value.trim() !== '' && 
                          versionInput.value.trim() !== '' && 
                          selectedFile !== null;

            uploadBtn.disabled = !isValid;
            if (isValid) {
                uploadBtn.classList.remove('opacity-50', 'cursor-not-allowed');
            } else {
                uploadBtn.classList.add('opacity-50', 'cursor-not-allowed');
            }
        }

        function uploadCurriculum() {
            const nameInput = document.getElementById('curriculumName');
            const versionInput = document.getElementById('curriculumVersion');
            const autoCreateTerms = document.getElementById('autoCreateTerms');

            if (!selectedFile || !nameInput.value.trim() || !versionInput.value.trim()) {
                alert('Please fill in all required fields and select a file.');
                return;
            }

            const formData = new FormData();
            formData.append('curriculum_file', selectedFile);
            formData.append('curriculum_name', nameInput.value.trim());
            formData.append('version', versionInput.value.trim());
            formData.append('department_id', {{ department.id }});
            formData.append('auto_create_terms', autoCreateTerms.checked ? '1' : '0');

            // Show loading state
            const uploadBtn = document.getElementById('uploadBtn');
            const originalContent = uploadBtn.innerHTML;
            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<span class="flex items-center"><svg class="animate-spin -ml-1 mr-3 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>Uploading...</span>';

            fetch('{{ path('admin_curriculum_bulk_upload') }}', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(`Success! Curriculum "${nameInput.value}" created with ${data.subjects_added} subjects and ${data.terms_created} terms.`);
                    window.location.reload();
                } else {
                    alert('Error: ' + (data.message || 'Upload failed. Please try again.'));
                    uploadBtn.disabled = false;
                    uploadBtn.innerHTML = originalContent;
                }
            })
            .catch(error => {
                console.error('Upload error:', error);
                alert('Error creating curriculum. Please try again.');
                uploadBtn.disabled = false;
                uploadBtn.innerHTML = originalContent;
            });
        }

        // Search and filter functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const statusFilter = document.getElementById('statusFilter');
            const curriculumItems = document.querySelectorAll('.curriculum-item');

            function filterCurricula() {
                const searchTerm = searchInput.value.toLowerCase();
                const statusValue = statusFilter.value;

                curriculumItems.forEach(item => {
                    const text = item.textContent.toLowerCase();
                    const status = item.dataset.status;

                    const matchesSearch = text.includes(searchTerm);
                    const matchesStatus = !statusValue || status === statusValue;

                    if (matchesSearch && matchesStatus) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterCurricula);
            statusFilter.addEventListener('change', filterCurricula);
        });

        // Update button state when form fields change
        document.addEventListener('DOMContentLoaded', function() {
            const curriculumName = document.getElementById('curriculumName');
            const curriculumVersion = document.getElementById('curriculumVersion');
            
            if (curriculumName) {
                curriculumName.addEventListener('input', updateUploadButton);
            }
            if (curriculumVersion) {
                curriculumVersion.addEventListener('input', updateUploadButton);
            }

            // Close modal on outside click
            window.onclick = function(event) {
                const modal = document.getElementById('uploadModal');
                if (event.target == modal) {
                    closeUploadModal();
                }
            }
        });
    </script>
