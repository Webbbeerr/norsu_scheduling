{% extends 'admin/base.html.twig' %}

{% block main_content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-8 mb-8">
        <div class="flex justify-between items-start">
            <div class="flex-1">
                <div class="flex items-center space-x-3 mb-3">
                    <h1 class="text-3xl font-bold text-white">{{ subject.code }}</h1>
                    {{ subject.statusBadge|raw }}
                    {{ subject.typeBadge|raw }}
                </div>
                <p class="text-blue-100 text-lg">{{ subject.title }}</p>
                <div class="flex items-center space-x-4 mt-2 text-blue-100">
                    <span><i class="fas fa-hashtag mr-1"></i>ID: {{ subject.id }}</span>
                    <span><i class="fas fa-clock mr-1"></i>{{ subject.units }} Units</span>
                </div>
            </div>
            <div class="flex space-x-3">
                <a href="{{ path('admin_subjects_edit', {id: subject.id}) }}" class="bg-white text-blue-600 px-5 py-3 rounded-lg font-medium hover:bg-blue-50 transition duration-150 shadow-md">
                    <i class="fas fa-edit mr-2"></i>Edit
                </a>
                <a href="{{ path('admin_subjects') }}" class="bg-blue-800 text-white px-5 py-3 rounded-lg font-medium hover:bg-blue-900 transition duration-150 shadow-md">
                    <i class="fas fa-arrow-left mr-2"></i>Back
                </a>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Subject Information -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-blue-50 to-blue-100 px-6 py-4 border-b border-blue-200">
                    <h2 class="text-xl font-bold text-blue-900">
                        <i class="fas fa-info-circle mr-2"></i>Subject Details
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Subject Code</label>
                        <p class="text-gray-900 text-lg font-mono bg-gray-50 px-3 py-2 rounded">{{ subject.code }}</p>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Subject Title</label>
                        <p class="text-gray-900 text-lg">{{ subject.title }}</p>
                    </div>

                    {% if subject.description %}
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                            <p class="text-gray-700 whitespace-pre-wrap">{{ subject.description }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Hours & Units -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-purple-50 to-purple-100 px-6 py-4 border-b border-purple-200">
                    <h2 class="text-xl font-bold text-purple-900">
                        <i class="fas fa-clock mr-2"></i>Hours & Units
                    </h2>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-3 gap-4">
                        <div class="text-center p-4 bg-blue-50 rounded-lg">
                            <div class="text-3xl font-bold text-blue-600">{{ subject.units }}</div>
                            <div class="text-sm text-gray-600 mt-1">Units</div>
                        </div>
                        <div class="text-center p-4 bg-green-50 rounded-lg">
                            <div class="text-3xl font-bold text-green-600">{{ subject.lectureHours ?? 0 }}</div>
                            <div class="text-sm text-gray-600 mt-1">Lecture Hours</div>
                        </div>
                        <div class="text-center p-4 bg-purple-50 rounded-lg">
                            <div class="text-3xl font-bold text-purple-600">{{ subject.labHours ?? 0 }}</div>
                            <div class="text-sm text-gray-600 mt-1">Lab Hours</div>
                        </div>
                    </div>
                    <div class="mt-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
                        <div class="flex justify-between items-center">
                            <span class="text-sm font-medium text-gray-700">Total Contact Hours:</span>
                            <span class="text-lg font-bold text-gray-900">{{ subject.totalHours }} hours/week</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Quick Info -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">
                        <i class="fas fa-list mr-2"></i>Quick Info
                    </h2>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Department</label>
                        <p class="text-gray-900">
                            {% if department %}
                                {{ department.name }}
                                <span class="text-gray-500">({{ department.code }})</span>
                            {% else %}
                                <span class="text-gray-400">N/A</span>
                            {% endif %}
                        </p>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Subject Type</label>
                        <p class="text-gray-900">{{ subject.typeBadge|raw }}</p>
                    </div>

                    {% if subject.prerequisite %}
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Prerequisites</label>
                        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                            <p class="text-gray-900 font-mono text-sm">{{ subject.prerequisite }}</p>
                        </div>
                    </div>
                    {% endif %}

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-1">Status</label>
                        <p class="text-gray-900">{{ subject.statusBadge|raw }}</p>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">
                        <i class="fas fa-cog mr-2"></i>Actions
                    </h2>
                </div>
                <div class="p-6 space-y-3">
                    <a href="{{ path('admin_subjects_edit', {id: subject.id}) }}" class="block w-full bg-orange-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-orange-700 transition duration-150 text-center">
                        <i class="fas fa-edit mr-2"></i>Edit Subject
                    </a>
                    
                    <form method="post" action="{{ path('admin_subjects_toggle_active', {id: subject.id}) }}" class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('toggle_active_subject_' ~ subject.id) }}">
                        <button type="submit" class="w-full {% if subject.isActive %}bg-yellow-600 hover:bg-yellow-700{% else %}bg-green-600 hover:bg-green-700{% endif %} text-white px-4 py-3 rounded-lg font-medium transition duration-150">
                            <i class="fas {% if subject.isActive %}fa-ban{% else %}fa-check-circle{% endif %} mr-2"></i>
                            {% if subject.isActive %}Deactivate{% else %}Activate{% endif %}
                        </button>
                    </form>

                    <form method="post" action="{{ path('admin_subjects_delete', {id: subject.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this subject? This action cannot be undone.');" class="w-full">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete_subject_' ~ subject.id) }}">
                        <button type="submit" class="w-full bg-red-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-red-700 transition duration-150">
                            <i class="fas fa-trash mr-2"></i>Delete Subject
                        </button>
                    </form>
                </div>
            </div>

            <!-- Metadata -->
            <div class="bg-white rounded-xl shadow-lg overflow-hidden">
                <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
                    <h2 class="text-xl font-bold text-gray-900">
                        <i class="fas fa-info mr-2"></i>Metadata
                    </h2>
                </div>
                <div class="p-6 space-y-3 text-sm">
                    <div class="flex justify-between">
                        <span class="text-gray-600">Created:</span>
                        <span class="font-medium text-gray-900">{{ subject.createdAt|date('M d, Y') }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-600">Last Updated:</span>
                        <span class="font-medium text-gray-900">{{ subject.updatedAt|date('M d, Y') }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
