{% extends 'admin/base.html.twig' %}

{% block main_content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl shadow-lg p-8 mb-8">
        <div class="flex justify-between items-center">
            <div class="flex-1">
                <h1 class="text-3xl font-bold text-white mb-2">Create New Subject</h1>
                <p class="text-blue-100">Add a new subject to the system</p>
            </div>
            <a href="{{ path('admin_subjects') }}" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-medium hover:bg-blue-50 transition duration-150 shadow-md">
                <i class="fas fa-arrow-left mr-2"></i>Back to Subjects
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden max-w-4xl mx-auto">
        <div class="p-8">
            {{ form_start(form, {'action': path('admin_subjects_create'), 'attr': {'class': 'space-y-6'}}) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Subject Code -->
                <div>
                    <label for="{{ form.code.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.code.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.code) }}
                    {{ form_errors(form.code) }}
                    <p class="text-xs text-gray-500 mt-1">e.g., CS101, MATH201</p>
                </div>

                <!-- Units -->
                <div>
                    <label for="{{ form.units.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.units.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.units) }}
                    {{ form_errors(form.units) }}
                </div>
            </div>

            <!-- Subject Title -->
            <div>
                <label for="{{ form.title.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form.title.vars.label }} <span class="text-red-500">*</span>
                </label>
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <!-- Description -->
            <div>
                <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form.description.vars.label }}
                </label>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Lecture Hours -->
                <div>
                    <label for="{{ form.lectureHours.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.lectureHours.vars.label }}
                    </label>
                    {{ form_widget(form.lectureHours) }}
                    {{ form_errors(form.lectureHours) }}
                </div>

                <!-- Lab Hours -->
                <div>
                    <label for="{{ form.labHours.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.labHours.vars.label }}
                    </label>
                    {{ form_widget(form.labHours) }}
                    {{ form_errors(form.labHours) }}
                </div>

                <!-- Subject Type -->
                <div>
                    <label for="{{ form.type.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.type.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Department -->
                <div>
                    <label for="{{ form.departmentId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.departmentId.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.departmentId) }}
                    {{ form_errors(form.departmentId) }}
                </div>

                <!-- Prerequisite -->
                <div>
                    <label for="{{ form.prerequisite.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.prerequisite.vars.label }}
                    </label>
                    {{ form_widget(form.prerequisite) }}
                    {{ form_errors(form.prerequisite) }}
                    <p class="text-xs text-gray-500 mt-1">Enter subject codes separated by commas</p>
                </div>
            </div>

            <!-- Active Status -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex items-center">
                    <div class="flex items-center h-5">
                        {{ form_widget(form.isActive) }}
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="{{ form.isActive.vars.id }}" class="font-medium text-gray-700">
                            {{ form.isActive.vars.label }}
                        </label>
                        <p class="text-gray-500">Enable this subject for use in the system</p>
                    </div>
                </div>
                {{ form_errors(form.isActive) }}
            </div>

            <!-- Form Actions -->
            <div class="flex justify-between pt-6 border-t border-gray-200">
                <a href="{{ path('admin_subjects') }}" 
                   class="px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200">
                    Cancel
                </a>
                <button type="submit"
                        class="px-8 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 shadow-sm">
                    <svg class="-ml-1 mr-2 h-5 w-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Create Subject
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <!-- Help Text -->
    <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4 max-w-4xl mx-auto">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-semibold text-blue-800 mb-1">Important Notes</h3>
                <ul class="text-sm text-blue-700 space-y-1">
                    <li>• Fields marked with <span class="text-red-500">*</span> are required</li>
                    <li>• Subject code must be unique across the system</li>
                    <li>• Lecture hours and lab hours determine the total contact hours per week</li>
                    <li>• Prerequisites should be existing subject codes</li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
