{% extends 'admin/base.html.twig' %}

{% block main_content %}
<div class="container mx-auto px-4 py-8">
    <!-- Header -->
    <div class="bg-gradient-to-r from-orange-600 to-orange-700 rounded-xl shadow-lg p-8 mb-8">
        <div class="flex justify-between items-center">
            <div class="flex-1">
                <h1 class="text-3xl font-bold text-white mb-2">Edit Subject</h1>
                <p class="text-orange-100">{{ subject.code }} - {{ subject.title }}</p>
            </div>
            <a href="{{ path('admin_subjects') }}" class="bg-white text-orange-600 px-6 py-3 rounded-lg font-medium hover:bg-orange-50 transition duration-150 shadow-md">
                <i class="fas fa-arrow-left mr-2"></i>Back to Subjects
            </a>
        </div>
    </div>

    <!-- Form Card -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden max-w-4xl mx-auto">
        <div class="p-8">
            {{ form_start(form, {'action': path('admin_subjects_edit', {'id': subject.id}), 'attr': {'class': 'space-y-6'}}) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Subject Code -->
                <div>
                    <label for="{{ form.code.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.code.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.code) }}
                    {{ form_errors(form.code) }}
                </div>

                <!-- Units -->
                <div>
                    <label for="{{ form.units.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.units.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.units) }}
                    {{ form_errors(form.units) }}
                </div>
            </div>

            <!-- Subject Title -->
            <div>
                <label for="{{ form.title.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form.title.vars.label }} <span class="text-red-500">*</span>
                </label>
                {{ form_widget(form.title) }}
                {{ form_errors(form.title) }}
            </div>

            <!-- Description -->
            <div>
                <label for="{{ form.description.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                    {{ form.description.vars.label }}
                </label>
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Lecture Hours -->
                <div>
                    <label for="{{ form.lectureHours.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.lectureHours.vars.label }}
                    </label>
                    {{ form_widget(form.lectureHours) }}
                    {{ form_errors(form.lectureHours) }}
                </div>

                <!-- Lab Hours -->
                <div>
                    <label for="{{ form.labHours.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.labHours.vars.label }}
                    </label>
                    {{ form_widget(form.labHours) }}
                    {{ form_errors(form.labHours) }}
                </div>

                <!-- Subject Type -->
                <div>
                    <label for="{{ form.type.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.type.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Department -->
                <div>
                    <label for="{{ form.departmentId.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.departmentId.vars.label }} <span class="text-red-500">*</span>
                    </label>
                    {{ form_widget(form.departmentId) }}
                    {{ form_errors(form.departmentId) }}
                </div>

                <!-- Prerequisite -->
                <div>
                    <label for="{{ form.prerequisite.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.prerequisite.vars.label }}
                    </label>
                    {{ form_widget(form.prerequisite) }}
                    {{ form_errors(form.prerequisite) }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Year Level -->
                <div>
                    <label for="{{ form.yearLevel.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.yearLevel.vars.label }}
                    </label>
                    {{ form_widget(form.yearLevel) }}
                    {{ form_errors(form.yearLevel) }}
                    <p class="mt-1 text-sm text-gray-500">Required for block sectioning conflict detection</p>
                </div>

                <!-- Semester -->
                <div>
                    <label for="{{ form.semester.vars.id }}" class="block text-sm font-semibold text-gray-700 mb-2">
                        {{ form.semester.vars.label }}
                    </label>
                    {{ form_widget(form.semester) }}
                    {{ form_errors(form.semester) }}
                    <p class="mt-1 text-sm text-gray-500">When this subject is typically offered</p>
                </div>
            </div>

            <!-- Active Status -->
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4">
                <div class="flex items-center">
                    <div class="flex items-center h-5">
                        {{ form_widget(form.isActive) }}
                    </div>
                    <div class="ml-3 text-sm">
                        <label for="{{ form.isActive.vars.id }}" class="font-medium text-gray-700">
                            {{ form.isActive.vars.label }}
                        </label>
                        <p class="text-gray-500">Enable this subject for use in the system</p>
                    </div>
                </div>
                {{ form_errors(form.isActive) }}
            </div>

            <!-- Form Actions -->
            <div class="flex justify-between pt-6 border-t border-gray-200">
                <a href="{{ path('admin_subjects') }}" 
                   class="px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-colors duration-200">
                    Cancel
                </a>
                <button type="submit"
                        class="px-8 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-orange-600 hover:bg-orange-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-orange-500 transition-colors duration-200 shadow-sm">
                    <svg class="-ml-1 mr-2 h-5 w-5 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Update Subject
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

    <!-- Metadata -->
    <div class="mt-6 bg-gray-50 border border-gray-200 rounded-lg p-4 max-w-4xl mx-auto">
        <div class="grid grid-cols-2 gap-4 text-sm">
            <div>
                <span class="text-gray-600">Created:</span>
                <span class="ml-2 font-medium text-gray-900">{{ subject.createdAt|date('M d, Y h:i A') }}</span>
            </div>
            <div>
                <span class="text-gray-600">Last Updated:</span>
                <span class="ml-2 font-medium text-gray-900">{{ subject.updatedAt|date('M d, Y h:i A') }}</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
