{% extends 'admin/base.html.twig' %}

{% block title %}Department Groups{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Department Groups</h1>
                <p class="mt-2 text-sm text-gray-600">Manage department clusters for shared faculty resources</p>
            </div>
            <button onclick="openCreateGroupModal()" 
                    class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white text-base font-medium rounded-lg shadow-lg transition duration-150">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                Create Group
            </button>
        </div>
    </div>

    <!-- Info Banner -->
    <div class="mb-8 bg-gradient-to-r from-indigo-50 to-purple-50 border-2 border-indigo-200 rounded-xl p-6">
        <div class="flex items-start gap-4">
            <div class="p-2 bg-indigo-100 rounded-lg">
                <svg class="h-6 w-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
            </div>
            <div class="flex-1">
                <h3 class="text-lg font-semibold text-indigo-900 mb-2">What are Department Groups?</h3>
                <p class="text-sm text-indigo-700">
                    Department Groups allow you to cluster related departments (e.g., IT & Computer Science) so they can share faculty members. 
                    When viewing faculty loading for any department in a group, you'll see faculty from all departments in that group.
                </p>
            </div>
        </div>
    </div>

    <!-- Department Groups Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-6 mb-8">
        {% for group in groups %}
            <div class="bg-white border-2 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300" 
                 style="border-color: {{ group.color ?? '#6366f1' }};">
                <!-- Group Header -->
                <div class="p-6" style="background: linear-gradient(135deg, {{ group.color ?? '#6366f1' }}15, {{ group.color ?? '#6366f1' }}05);">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex-1">
                            <h3 class="text-xl font-bold text-gray-900 mb-2">{{ group.name }}</h3>
                            {% if group.description %}
                                <p class="text-sm text-gray-600">{{ group.description }}</p>
                            {% endif %}
                        </div>
                        <div class="flex gap-2">
                            <button onclick="openEditGroupModal({{ group.id }}, '{{ group.name }}', '{{ group.description ?? '' }}', '{{ group.color ?? '#6366f1' }}')" 
                                    class="p-2 bg-white hover:bg-gray-100 border border-gray-300 rounded-lg transition-colors"
                                    title="Edit group">
                                <svg class="h-4 w-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                            </button>
                            <button onclick="deleteGroup({{ group.id }}, '{{ group.name }}')" 
                                    class="p-2 bg-white hover:bg-red-50 border border-gray-300 hover:border-red-300 rounded-lg transition-colors"
                                    title="Delete group">
                                <svg class="h-4 w-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <!-- Color Badge -->
                    <div class="flex items-center gap-2 mb-4">
                        <div class="w-6 h-6 rounded-full border-2 border-white shadow-sm" style="background-color: {{ group.color ?? '#6366f1' }};"></div>
                        <span class="text-xs font-medium text-gray-500">Group Color</span>
                    </div>
                </div>

                <!-- Departments in Group -->
                <div class="p-6 border-t border-gray-200">
                    <div class="flex items-center justify-between mb-3">
                        <h4 class="text-sm font-semibold text-gray-700">Departments ({{ group.departments|length }})</h4>
                        <button onclick="openAssignDepartmentModal({{ group.id }}, '{{ group.name }}')" 
                                class="text-sm text-indigo-600 hover:text-indigo-700 font-medium">
                            + Add Department
                        </button>
                    </div>

                    {% if group.departments is empty %}
                        <p class="text-sm text-gray-500 italic">No departments assigned yet</p>
                    {% else %}
                        <div class="space-y-2">
                            {% for department in group.departments %}
                                <div class="flex items-center justify-between p-3 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-lg flex items-center justify-center text-white font-bold text-sm" 
                                             style="background-color: {{ group.color ?? '#6366f1' }};">
                                            {{ department.code|slice(0, 2)|upper }}
                                        </div>
                                        <div>
                                            <p class="text-sm font-semibold text-gray-900">{{ department.name }}</p>
                                            <p class="text-xs text-gray-500">{{ department.code }}</p>
                                        </div>
                                    </div>
                                    <button onclick="unassignDepartment({{ department.id }}, '{{ department.name }}', {{ group.id }})" 
                                            class="p-1.5 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-lg transition-colors"
                                            title="Remove from group">
                                        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                                        </svg>
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div class="col-span-full bg-white rounded-2xl border-2 border-dashed border-gray-300 p-12 text-center">
                <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
                <h3 class="text-lg font-semibold text-gray-900 mb-2">No Department Groups Yet</h3>
                <p class="text-gray-600 mb-4">Create your first department group to start sharing faculty across departments.</p>
                <button onclick="openCreateGroupModal()" 
                        class="inline-flex items-center px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white font-medium rounded-lg transition-colors">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Create First Group
                </button>
            </div>
        {% endfor %}
    </div>

    <!-- Ungrouped Departments Section -->
    {% if ungroupedDepartments is not empty %}
        <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Ungrouped Departments ({{ ungroupedDepartments|length }})</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
                {% for department in ungroupedDepartments %}
                    <div class="p-4 bg-gray-50 hover:bg-gray-100 border border-gray-200 rounded-xl transition-colors">
                        <div class="flex items-center gap-3">
                            <div class="w-12 h-12 bg-gray-300 rounded-lg flex items-center justify-center text-gray-700 font-bold">
                                {{ department.code|slice(0, 2)|upper }}
                            </div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-semibold text-gray-900 truncate">{{ department.name }}</p>
                                <p class="text-xs text-gray-500">{{ department.code }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <p class="mt-4 text-sm text-gray-600">
                <svg class="inline-block h-4 w-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                These departments don't belong to any group and will only show their own faculty members.
            </p>
        </div>
    {% endif %}

    <!-- Create/Edit Group Modal -->
    <div id="groupModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="flex items-center justify-center min-h-full p-4">
            <div class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full transform transition-all">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h3 class="text-xl font-bold text-gray-900" id="modalTitle">Create Department Group</h3>
                        <button onclick="closeGroupModal()" class="text-gray-400 hover:text-gray-600 transition">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>

                    <form id="groupForm" onsubmit="saveGroup(event)">
                        <input type="hidden" id="groupId" value="">
                        
                        <!-- Group Name -->
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">
                                Group Name <span class="text-red-500">*</span>
                            </label>
                            <input type="text" id="groupName" required
                                   placeholder="e.g., Technology Cluster"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Description</label>
                            <textarea id="groupDescription" rows="3"
                                      placeholder="Brief description of this group"
                                      class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                        </div>

                        <!-- Color Picker -->
                        <div class="mb-6">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Group Color</label>
                            <div class="flex gap-3 flex-wrap">
                                {% set colors = ['#6366f1', '#8b5cf6', '#ec4899', '#f43f5e', '#ef4444', '#f97316', '#f59e0b', '#84cc16', '#10b981', '#14b8a6', '#06b6d4', '#3b82f6'] %}
                                {% for color in colors %}
                                    <label class="cursor-pointer">
                                        <input type="radio" name="groupColor" value="{{ color }}" class="sr-only color-radio" {% if loop.first %}checked{% endif %}>
                                        <div class="w-10 h-10 rounded-lg border-2 border-transparent hover:border-gray-400 transition-all color-option" 
                                             style="background-color: {{ color }};"
                                             data-color="{{ color }}"></div>
                                    </label>
                                {% endfor %}
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="flex gap-3 pt-4 border-t border-gray-200">
                            <button type="button" onclick="closeGroupModal()" 
                                    class="flex-1 px-4 py-2.5 border-2 border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors">
                                Cancel
                            </button>
                            <button type="submit" 
                                    class="flex-1 px-4 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 text-white rounded-lg font-medium shadow-lg transition-all">
                                Save Group
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Assign Department Modal -->
    <div id="assignDepartmentModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="flex items-center justify-center min-h-full p-4">
            <div class="relative bg-white rounded-2xl shadow-2xl max-w-md w-full transform transition-all">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-6">
                        <div>
                            <h3 class="text-xl font-bold text-gray-900">Assign Department</h3>
                            <p class="text-sm text-gray-600 mt-1">to <span id="assignGroupName" class="font-semibold text-indigo-600"></span></p>
                        </div>
                        <button onclick="closeAssignDepartmentModal()" class="text-gray-400 hover:text-gray-600 transition">
                            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>

                    <input type="hidden" id="assignToGroupId" value="">
                    
                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-3">Select Department</label>
                        <div class="space-y-2 max-h-96 overflow-y-auto">
                            {% for department in ungroupedDepartments %}
                                <button type="button" onclick="assignDepartmentToGroup({{ department.id }})"
                                        class="w-full flex items-center gap-3 p-3 bg-gray-50 hover:bg-indigo-50 border border-gray-200 hover:border-indigo-300 rounded-lg transition-colors text-left">
                                    <div class="w-10 h-10 bg-indigo-100 rounded-lg flex items-center justify-center text-indigo-600 font-bold text-sm">
                                        {{ department.code|slice(0, 2)|upper }}
                                    </div>
                                    <div class="flex-1">
                                        <p class="text-sm font-semibold text-gray-900">{{ department.name }}</p>
                                        <p class="text-xs text-gray-500">{{ department.code }}</p>
                                    </div>
                                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                                    </svg>
                                </button>
                            {% else %}
                                <p class="text-sm text-gray-500 text-center py-4">No ungrouped departments available</p>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="pt-4 border-t border-gray-200">
                        <button type="button" onclick="closeAssignDepartmentModal()" 
                                class="w-full px-4 py-2.5 border-2 border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition-colors">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Color selector functionality
        document.querySelectorAll('.color-radio').forEach(radio => {
            radio.addEventListener('change', function() {
                document.querySelectorAll('.color-option').forEach(opt => {
                    opt.classList.remove('ring-4', 'ring-offset-2');
                    opt.classList.add('border-transparent');
                });
                const selectedOption = this.nextElementSibling;
                selectedOption.classList.remove('border-transparent');
                selectedOption.classList.add('ring-4', 'ring-offset-2');
                selectedOption.style.setProperty('--tw-ring-color', this.value);
            });
        });

        // Initialize first color as selected
        const firstColorRadio = document.querySelector('.color-radio:checked');
        if (firstColorRadio && firstColorRadio.nextElementSibling) {
            firstColorRadio.nextElementSibling.classList.add('ring-4', 'ring-offset-2');
        }

        function openCreateGroupModal() {
            document.getElementById('modalTitle').textContent = 'Create Department Group';
            document.getElementById('groupId').value = '';
            document.getElementById('groupName').value = '';
            document.getElementById('groupDescription').value = '';
            
            // Reset to first color
            const firstColor = document.querySelector('.color-radio');
            if (firstColor) {
                firstColor.checked = true;
                firstColor.dispatchEvent(new Event('change'));
            }
            
            document.getElementById('groupModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function openEditGroupModal(id, name, description, color) {
            document.getElementById('modalTitle').textContent = 'Edit Department Group';
            document.getElementById('groupId').value = id;
            document.getElementById('groupName').value = name;
            document.getElementById('groupDescription').value = description;
            
            // Select the matching color
            const colorRadio = document.querySelector(`input[value="${color}"]`);
            if (colorRadio) {
                colorRadio.checked = true;
                colorRadio.dispatchEvent(new Event('change'));
            }
            
            document.getElementById('groupModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeGroupModal() {
            document.getElementById('groupModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        async function saveGroup(event) {
            event.preventDefault();
            
            const groupId = document.getElementById('groupId').value;
            const name = document.getElementById('groupName').value;
            const description = document.getElementById('groupDescription').value;
            const color = document.querySelector('input[name="groupColor"]:checked').value;

            const url = groupId 
                ? `/admin/department-groups/${groupId}/update`
                : '/admin/department-groups/create';

            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, description, color })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    closeGroupModal();
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving the group');
            }
        }

        async function deleteGroup(id, name) {
            if (!confirm(`Are you sure you want to delete the group "${name}"? Departments will be unassigned but not deleted.`)) {
                return;
            }

            try {
                const response = await fetch(`/admin/department-groups/${id}/delete`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while deleting the group');
            }
        }

        function openAssignDepartmentModal(groupId, groupName) {
            document.getElementById('assignToGroupId').value = groupId;
            document.getElementById('assignGroupName').textContent = groupName;
            document.getElementById('assignDepartmentModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeAssignDepartmentModal() {
            document.getElementById('assignDepartmentModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        async function assignDepartmentToGroup(departmentId) {
            const groupId = document.getElementById('assignToGroupId').value;

            try {
                const response = await fetch(`/admin/department-groups/${groupId}/assign-department`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ department_id: departmentId })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    closeAssignDepartmentModal();
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while assigning the department');
            }
        }

        async function unassignDepartment(departmentId, departmentName, groupId) {
            if (!confirm(`Remove "${departmentName}" from this group?`)) {
                return;
            }

            try {
                const response = await fetch('/admin/department-groups/unassign-department', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ department_id: departmentId })
                });

                const result = await response.json();

                if (result.success) {
                    alert(result.message);
                    window.location.reload();
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while removing the department');
            }
        }
    </script>
{% endblock %}
