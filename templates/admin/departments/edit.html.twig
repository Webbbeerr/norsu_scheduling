{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div class="flex-1">
                <h1 class="text-3xl font-bold text-gray-900 sm:text-4xl">Edit Department</h1>
                <p class="mt-2 text-sm text-gray-600">Update department information</p>
            </div>
            <div>
                <a href="{{ path('admin_departments') }}" 
                   class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 shadow-sm transition duration-150">
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                    </svg>
                    Back to Departments
                </a>
            </div>
        </div>
    </div>

    <!-- Form Card -->
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-lg border border-gray-100 overflow-hidden">
            <div class="px-8 py-6 bg-gradient-to-r from-purple-600 to-purple-700">
                <h2 class="text-xl font-semibold text-white">Department Information</h2>
                <p class="text-purple-100 text-sm mt-1">Update the details below to modify this department</p>
            </div>

            <div class="p-8">
                {{ form_start(form, {'method': 'POST', 'action': path('admin_departments_edit', {'id': department.id}), 'attr': {'class': 'space-y-6', 'data-turbo': 'false', 'autocomplete': 'on', 'data-edit-form': 'true'}}) }}

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Department Code -->
                    <div>
                        {{ form_label(form.code, 'Department Code', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        <span class="text-red-500">*</span>
                        {{ form_widget(form.code, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150', 'placeholder': 'e.g., CS, IT, MATH'}}) }}
                        {{ form_errors(form.code) }}
                        <p class="mt-1 text-sm text-gray-500">Unique code (uppercase, max 10 characters)</p>
                    </div>

                    <!-- Department Name -->
                    <div>
                        {{ form_label(form.name, 'Department Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        <span class="text-red-500">*</span>
                        {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150', 'placeholder': 'e.g., Computer Science'}}) }}
                        {{ form_errors(form.name) }}
                        <p class="mt-1 text-sm text-gray-500">Full name of the department</p>
                    </div>
                </div>

                <!-- Description -->
                <div>
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150', 'placeholder': 'Brief description of the department (optional)', 'rows': '4'}}) }}
                    {{ form_errors(form.description) }}
                    <p class="mt-1 text-sm text-gray-500">Optional: Overview of the department's focus and programs</p>
                </div>

                <!-- College -->
                <div>
                    {{ form_label(form.college, 'College', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.college, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150'}}) }}
                    {{ form_errors(form.college) }}
                    <p class="mt-1 text-sm text-gray-500">Select the college this department belongs to</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Department Head Name -->
                    <div>
                        {{ form_label(form.headName, 'Department Head Name', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.headName, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150', 'placeholder': 'e.g., Dr. John Smith'}}) }}
                        {{ form_errors(form.headName) }}
                        <p class="mt-1 text-sm text-gray-500">Name of the department head (optional)</p>
                    </div>

                    <!-- Contact Email -->
                    <div>
                        {{ form_label(form.contactEmail, 'Contact Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.contactEmail, {'attr': {'class': 'w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition duration-150', 'placeholder': 'e.g., cs.dept@university.edu'}}) }}
                        {{ form_errors(form.contactEmail) }}
                        <p class="mt-1 text-sm text-gray-500">Department contact email (optional)</p>
                    </div>
                </div>

                <!-- Active Status -->
                <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                    <div class="flex items-start">
                        <div class="flex items-center h-5 mt-1">
                            {{ form_widget(form.isActive, {'attr': {'class': 'h-4 w-4 rounded border-gray-300 text-purple-600 focus:ring-purple-500'}}) }}
                        </div>
                        <div class="ml-3">
                            {{ form_label(form.isActive, 'Active Status', {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                            <p class="text-sm text-gray-500">Check this to make the department active and visible in the system</p>
                        </div>
                    </div>
                </div>

                {{ form_rest(form) }}

                <!-- Action Buttons -->
                <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
                    <a href="{{ path('admin_departments') }}" 
                       class="px-6 py-3 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition duration-150">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white text-sm font-medium rounded-lg focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 shadow-sm transition duration-150">
                        <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                        Update Department
                    </button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

        <!-- Metadata Card -->
        <div class="mt-6 bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-sm font-semibold text-gray-900">Metadata</h3>
            </div>
            <div class="p-6">
                <dl class="grid grid-cols-1 gap-4 sm:grid-cols-2">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Created At</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ department.createdAt|date('F j, Y g:i A') }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Last Updated</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ department.updatedAt|date('F j, Y g:i A') }}</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>

<style>
    .form-error {
        color: #dc2626;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
    
    .form-error-list {
        list-style: none;
        padding: 0;
        margin: 0.25rem 0 0 0;
    }
    
    .form-error-list li {
        color: #dc2626;
        font-size: 0.875rem;
    }
</style>

<script>
    // PROTECTION: Override form.reset() for edit forms to prevent accidental clearing
    (function() {
        // Wait for DOM to be fully loaded
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', protectEditForm);
        } else {
            protectEditForm();
        }
        
        function protectEditForm() {
            const editForm = document.querySelector('form[data-edit-form="true"]');
            if (editForm) {
                // Store original reset function
                const originalReset = editForm.reset.bind(editForm);
                
                // Override reset to do nothing on edit forms
                editForm.reset = function() {
                    console.log('Form reset prevented for edit form');
                    return false;
                };
                
                // Protect form from being cleared
                editForm.addEventListener('reset', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Form reset event prevented');
                    return false;
                }, true);
                
                console.log('Edit form protection activated');
            }
        }
    })();
</script>
{% endblock %}
