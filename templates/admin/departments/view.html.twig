{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block main_content %}
<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-8 flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">{{ department.name }}</h1>
                    <p class="mt-2 text-sm text-gray-600">Department Code: <span class="font-mono font-semibold">{{ department.code }}</span></p>
                </div>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium {{ department.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                    {{ department.isActive ? 'Active' : 'Inactive' }}
                </span>
            </div>
            <a href="{{ path('admin_departments') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to Departments
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Department Details Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-900">Department Information</h3>
                        <a href="{{ path('admin_departments_edit', {id: department.id}) }}" class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-blue-600 hover:text-blue-700 hover:bg-blue-50 rounded-lg transition-colors">
                            <svg class="mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Edit
                        </a>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">Department Code</dt>
                                <dd class="text-base font-mono font-semibold text-gray-900 bg-gray-50 px-3 py-2 rounded-lg inline-block">{{ department.code }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">Department Name</dt>
                                <dd class="text-base text-gray-900 font-semibold">{{ department.name }}</dd>
                            </div>
                            <div class="sm:col-span-2">
                                <dt class="text-sm font-medium text-gray-500 mb-1">Description</dt>
                                <dd class="text-sm text-gray-900">
                                    {% if department.description %}
                                        {{ department.description }}
                                    {% else %}
                                        <span class="text-gray-400 italic">No description provided</span>
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">College</dt>
                                <dd class="text-base text-gray-900">
                                    {% if department.college %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-lg bg-blue-50 text-blue-700 font-medium">
                                            {{ department.college.name }}
                                        </span>
                                    {% else %}
                                        <span class="text-gray-400 italic">Not assigned</span>
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">Status</dt>
                                <dd>
                                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium {{ department.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                                        <span class="mr-1.5 h-2 w-2 rounded-full {{ department.isActive ? 'bg-green-500' : 'bg-red-500' }}"></span>
                                        {{ department.isActive ? 'Active' : 'Inactive' }}
                                    </span>
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Department Head Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Department Head</h3>
                    </div>
                    <div class="p-6">
                        <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">Name</dt>
                                <dd class="text-base text-gray-900">
                                    {% if department.headName %}
                                        <span class="font-medium">{{ department.headName }}</span>
                                    {% else %}
                                        <span class="text-gray-400 italic">Not assigned</span>
                                    {% endif %}
                                </dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-500 mb-1">Contact Email</dt>
                                <dd class="text-base text-gray-900">
                                    {% if department.contactEmail %}
                                        <a href="mailto:{{ department.contactEmail }}" class="text-blue-600 hover:text-blue-700 hover:underline">
                                            {{ department.contactEmail }}
                                        </a>
                                    {% else %}
                                        <span class="text-gray-400 italic">No email provided</span>
                                    {% endif %}
                                </dd>
                            </div>
                        </dl>
                    </div>
                </div>

                <!-- Faculty Members Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-900">Faculty Members</h3>
                    </div>
                    <div class="p-6">
                        {% if department.users|length > 0 %}
                            <div class="space-y-3">
                                {% for user in department.users %}
                                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                                        <div class="flex items-center space-x-3">
                                            <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                                                <span class="text-blue-600 font-semibold text-sm">{{ user.firstName|slice(0, 1) }}{{ user.lastName|slice(0, 1) }}</span>
                                            </div>
                                            <div>
                                                <p class="text-sm font-medium text-gray-900">{{ user.firstName }} {{ user.lastName }}</p>
                                                <p class="text-xs text-gray-500">{{ user.email }}</p>
                                            </div>
                                        </div>
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{ user.isActive ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' }}">
                                            {{ user.isActive ? 'Active' : 'Inactive' }}
                                        </span>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center py-8">
                                <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                <p class="mt-2 text-sm text-gray-500">No faculty members assigned yet</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Quick Actions Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-sm font-semibold text-gray-900">Quick Actions</h3>
                    </div>
                    <div class="p-4 space-y-2">
                        <a href="{{ path('admin_departments_edit', {id: department.id}) }}" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">
                            <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                            Edit Department
                        </a>
                        
                        <form action="{{ path('admin_departments_toggle_status', {id: department.id}) }}" method="POST" class="w-full">
                            <input type="hidden" name="_token" value="{{ csrf_token('toggle_status_department_' ~ department.id) }}">
                            <button type="submit" class="flex items-center w-full px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 rounded-lg transition-colors text-left">
                                <svg class="mr-3 h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"/>
                                </svg>
                                {{ department.isActive ? 'Deactivate' : 'Activate' }} Department
                            </button>
                        </form>

                        <button type="button" onclick="confirmDelete()" class="flex items-center w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg transition-colors text-left">
                            <svg class="mr-3 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Delete Department
                        </button>

                        <form id="deleteForm" action="{{ path('admin_departments_delete', {id: department.id}) }}" method="POST" style="display: none;">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_department_' ~ department.id) }}">
                        </form>
                    </div>
                </div>

                <!-- Statistics Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-sm font-semibold text-gray-900">Statistics</h3>
                    </div>
                    <div class="p-4 space-y-4">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Total Faculty</span>
                            <span class="text-lg font-semibold text-gray-900">{{ department.users|length }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Active Faculty</span>
                            <span class="text-lg font-semibold text-green-600">
                                {% set activeFaculty = 0 %}
                                {% for user in department.users %}
                                    {% if user.isActive %}
                                        {% set activeFaculty = activeFaculty + 1 %}
                                    {% endif %}
                                {% endfor %}
                                {{ activeFaculty }}
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Metadata Card -->
                <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h3 class="text-sm font-semibold text-gray-900">Metadata</h3>
                    </div>
                    <div class="p-4 space-y-3">
                        <div>
                            <dt class="text-xs font-medium text-gray-500">Created</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ department.createdAt|date('M j, Y g:i A') }}</dd>
                        </div>
                        <div>
                            <dt class="text-xs font-medium text-gray-500">Last Updated</dt>
                            <dd class="mt-1 text-sm text-gray-900">{{ department.updatedAt|date('M j, Y g:i A') }}</dd>
                        </div>
                        <div>
                            <dt class="text-xs font-medium text-gray-500">Department ID</dt>
                            <dd class="mt-1 text-sm font-mono text-gray-900">{{ department.id }}</dd>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete() {
    if (confirm('Are you sure you want to delete this department? This action cannot be undone.')) {
        document.getElementById('deleteForm').submit();
    }
}
</script>
{% endblock %}
