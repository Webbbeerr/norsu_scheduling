function updateFieldVisibilityBasedOnRole() {
    console.log('updateFieldVisibilityBasedOnRole called');
    
    const roleSelect = document.querySelector('select[name="user_edit_form[role]"]');
    if (!roleSelect) {
        console.error('Role select not found');
        return;
    }
    
    const positionSelect = document.querySelector('select[name="user_edit_form[position]"]');
    const collegeSelect = document.querySelector('#college-select');
    const departmentSelect = document.querySelector('#department-select');
    
    const selectedRole = parseInt(roleSelect.value);
    console.log('Selected role:', selectedRole);
    
    // Role 1 = Administrator (hide position, college, department)
    // Role 2 = Department Head (show all)
    // Role 3 = Faculty (show all)
    
    // Get containers
    const positionContainer = positionSelect?.closest('div.space-y-4 > div');
    const collegeDepGrid = document.querySelector('.grid.grid-cols-2.gap-4');
    
    if (selectedRole === 1) {
        // Administrator - hide these fields
        console.log('Administrator selected - hiding fields');
        
        if (positionContainer) {
            positionContainer.style.display = 'none';
            if (positionSelect) positionSelect.value = '';
        }
        
        // Hide the entire college-department grid
        if (collegeDepGrid) {
            collegeDepGrid.style.display = 'none';
            if (collegeSelect) collegeSelect.value = '';
            if (departmentSelect) departmentSelect.value = '';
        }
    } else if (selectedRole === 2 || selectedRole === 3) {
        // Department Head or Faculty - show these fields
        console.log('Department Head or Faculty selected - showing fields');
        
        if (positionContainer) positionContainer.style.display = '';
        if (collegeDepGrid) collegeDepGrid.style.display = '';
    }
}

