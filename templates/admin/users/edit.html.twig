<script>
// Generate random password
function generatePassword() {
    const length = 12;
    const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*";
    let password = "";
    for (let i = 0, n = charset.length; i < length; ++i) {
        password += charset.charAt(Math.floor(Math.random() * n));
    }
    
    const firstPasswordField = document.querySelector('input[id$="_newPassword_first"]');
    const secondPasswordField = document.querySelector('input[id$="_newPassword_second"]');
    
    if (firstPasswordField && secondPasswordField) {
        firstPasswordField.value = password;
        secondPasswordField.value = password;
        
        // Show password temporarily
        const originalType = firstPasswordField.type;
        firstPasswordField.type = 'text';
        secondPasswordField.type = 'text';
        
        setTimeout(() => {
            firstPasswordField.type = originalType;
            secondPasswordField.type = originalType;
        }, 3000);
    }
}

// CRITICAL FIX: Manually populate form if values are missing
document.addEventListener('DOMContentLoaded', function() {
    // User data from server
    const userData = {
        username: '{{ user.username|escape('js') }}',
        email: '{{ user.email|escape('js') }}',
        firstName: '{{ user.firstName|escape('js') }}',
        middleName: '{{ user.middleName|escape('js') }}',
        lastName: '{{ user.lastName|escape('js') }}',
        employeeId: '{{ user.employeeId|escape('js') }}',
        position: '{{ user.position|escape('js') }}',
        role: '{{ user.role }}',
        collegeId: '{{ user.college ? user.college.id : '' }}',
        departmentId: '{{ user.department ? user.department.id : '' }}',
        isActive: {{ user.isActive ? 'true' : 'false' }}
    };
    
    console.log('User data from server:', userData);
    
    // Find form fields and populate if empty
    setTimeout(function() {
        const form = document.querySelector('form[name="user_edit_form"]') || document.querySelector('form');
        if (!form) return;
        
        // Populate text fields
        const textFieldsMap = {
            'username': userData.username,
            'email': userData.email,
            'firstName': userData.firstName,
            'lastName': userData.lastName,
            'employeeId': userData.employeeId
        };
        
        Object.keys(textFieldsMap).forEach(fieldName => {
            const input = form.querySelector(`[name*="${fieldName}"]`);
            if (input && (input.type === 'text' || input.type === 'email') && !input.value && textFieldsMap[fieldName]) {
                console.log(`Manually populating ${fieldName} with:`, textFieldsMap[fieldName]);
                input.value = textFieldsMap[fieldName];
            }
        });
        
        // Populate position select (now a dropdown)
        const positionSelect = form.querySelector('select[name*="position"]');
        if (positionSelect && userData.position) {
            console.log('Setting position to:', userData.position);
            positionSelect.value = userData.position;
            console.log('Position value after setting:', positionSelect.value);
        }
        
        // Populate role select
        const roleSelect = form.querySelector('select[name*="role"]');
        if (roleSelect && userData.role) {
            console.log('Setting role to:', userData.role);
            roleSelect.value = userData.role;
        }
        
        // Populate college select
        const collegeSelect = document.getElementById('college-select');
        if (collegeSelect && userData.collegeId) {
            console.log('Setting college to:', userData.collegeId);
            collegeSelect.value = userData.collegeId;
        }
        
        // Populate department select
        const departmentSelect = document.getElementById('department-select');
        if (departmentSelect && userData.departmentId) {
            console.log('Setting department to:', userData.departmentId);
            departmentSelect.value = userData.departmentId;
        }
        
        // Populate checkbox
        const isActiveCheckbox = form.querySelector('[name*="isActive"]');
        if (isActiveCheckbox && !isActiveCheckbox.checked && userData.isActive) {
