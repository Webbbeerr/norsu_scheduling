{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 mb-1">{{ page_title }}</h1>
            <p class="text-gray-600 text-sm">Manage user profile and account settings</p>
        </div>
        <div class="flex space-x-3 mt-4 sm:mt-0">
            <a href="{{ path('admin_users_edit', {id: user.id, return_url: back_url ?? path('admin_users_all')}) }}" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg shadow-sm transition duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
                Edit User
            </a>
            <a href="{{ back_url ?? path('admin_users_all') }}" class="inline-flex items-center px-4 py-2 bg-white hover:bg-gray-50 text-gray-700 text-sm font-semibold rounded-lg border border-gray-300 shadow-sm transition duration-200">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to Users
            </a>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Left Column - User Profile Card -->
        <div class="lg:col-span-2">
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <!-- User Header -->
                <div class="bg-gradient-to-r from-blue-600 to-blue-500 px-6 py-8">
                    <div class="flex items-center space-x-4">
                        <div class="w-20 h-20 bg-white/20 backdrop-blur-sm rounded-lg flex items-center justify-center text-white text-2xl font-bold">
                            {{ user.firstName ? user.firstName|first|upper : user.username|first|upper }}{{ user.lastName ? user.lastName|first|upper : '' }}
                        </div>
                        <div>
                            <h2 class="text-2xl font-bold text-white">{{ user.fullName ?: user.username }}</h2>
                            <p class="text-blue-100 text-sm">{{ user.position ?: 'partime' }}</p>
                            <div class="flex items-center mt-2 space-x-2">
                                {% if user.isActive %}
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-500 text-white">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 8 8"><circle cx="4" cy="4" r="3"/></svg>
                                        Active
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-500 text-white">
                                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 8 8"><circle cx="4" cy="4" r="3"/></svg>
                                        Inactive
                                    </span>
                                {% endif %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium {{ user.role == 1 ? 'bg-red-500' : (user.role == 2 ? 'bg-yellow-500' : 'bg-blue-500') }} text-white">
                                    {{ user.roleDisplayName }}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Personal Information -->
                <div class="px-6 py-5 border-b">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Personal Information</h3>
                    <div class="grid grid-cols-2 gap-x-8 gap-y-4">
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Username</p>
                            <p class="text-base font-medium text-gray-900">{{ user.username }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">College</p>
                            <p class="text-base font-medium text-gray-900">{{ user.college ? user.college.name : 'Not assigned' }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Email Address</p>
                            <p class="text-base font-medium text-blue-600">{{ user.email }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Department</p>
                            <p class="text-base font-medium text-gray-900">{{ user.department ? user.department.name : 'Not assigned' }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Employee ID</p>
                            <p class="text-base font-medium text-gray-900">{{ user.employeeId }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Position/Title</p>
                            <p class="text-base font-medium text-gray-900">{{ user.position ?: 'Not specified' }}</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-1">Role</p>
                            <p class="text-base font-medium">
                                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium {{ user.role == 1 ? 'bg-red-100 text-red-800' : (user.role == 2 ? 'bg-yellow-100 text-yellow-800' : 'bg-blue-100 text-blue-800') }}">
                                    {{ user.roleDisplayName }}
                                </span>
                            </p>
                        </div>
                        <div class="col-span-2">
                            <p class="text-sm text-gray-600 mb-1">Address</p>
                            <p class="text-base font-medium text-gray-900">{{ user.address ?: 'No address provided' }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column - Activity & Actions -->
        <div class="space-y-6">
            <!-- Activity Information Card -->
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="px-6 py-5 border-b">
                    <h3 class="text-lg font-semibold text-gray-900">Activity Information</h3>
                </div>
                <div class="px-6 py-5 space-y-4">
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Account Created:</p>
                        <p class="text-base font-medium text-gray-900">
                            {% if user.createdAt %}
                                {{ user.createdAt|date('F j, Y') }}
                                <span class="block text-sm text-gray-500">{{ user.createdAt|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">N/A</span>
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Last Updated:</p>
                        <p class="text-base font-medium text-gray-900">
                            {% if user.updatedAt %}
                                {{ user.updatedAt|date('F j, Y') }}
                                <span class="block text-sm text-gray-500">{{ user.updatedAt|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">Never updated</span>
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-600 mb-1">Last Login:</p>
                        <p class="text-base font-medium text-gray-900">
                            {% if user.lastLogin %}
                                {{ user.lastLogin|date('F j, Y') }}
                                <span class="block text-sm text-gray-500">{{ user.lastLogin|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">Never logged in</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Actions Card -->
            <div class="bg-white shadow rounded-lg overflow-hidden">
                <div class="px-6 py-5 border-b">
                    <h3 class="text-lg font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="px-6 py-5 space-y-4">
                    <div>
                        <p class="text-sm font-semibold text-gray-700 mb-2">Account Management</p>
                        <div class="space-y-2">
                            <a href="{{ path('admin_users_edit', {id: user.id, return_url: back_url ?? path('admin_users_all')}) }}" class="flex items-center justify-center w-full px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 hover:bg-blue-100 rounded border border-blue-200 transition">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit User Information
                            </a>
                            
                            {% if user.isActive %}
                                <form method="POST" action="{{ path('admin_users_deactivate', {id: user.id}) }}">
                                    <input type="hidden" name="_token" value="{{ csrf_token('deactivate_user_' ~ user.id) }}">
                                    <button type="submit" class="flex items-center justify-center w-full px-3 py-2 text-sm font-medium text-yellow-700 bg-yellow-50 hover:bg-yellow-100 rounded border border-yellow-200 transition" 
                                            onclick="return confirm('Are you sure you want to deactivate this user?')">
                                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"/>
                                        </svg>
                                        Deactivate User
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div>
                        <p class="text-sm font-semibold text-gray-700 mb-2">Security Actions</p>
                        <div class="space-y-2">
                            <button type="button" class="flex items-center justify-center w-full px-3 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 hover:bg-indigo-100 rounded border border-indigo-200 transition" onclick="sendPasswordReset()">
                                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                                </svg>
                                Send Password Reset Email
                            </button>
                            
                            <form method="POST" action="{{ path('admin_users_delete', {id: user.id}) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete_user_' ~ user.id) }}">
                                <button type="submit" class="flex items-center justify-center w-full px-3 py-2 text-sm font-medium text-red-600 bg-red-50 hover:bg-red-100 rounded border border-red-200 transition" 
                                        onclick="return confirm('Are you sure you want to delete this user? This action cannot be undone.')">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                    </svg>
                                    Delete User
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
    function sendPasswordReset() {
        if (confirm('Send password reset email to {{ user.email }}?')) {
            alert('Password reset email functionality will be implemented soon.\n\nThis would send a reset link to: {{ user.email }}');
        }
    }
    </script>

{% endblock %}