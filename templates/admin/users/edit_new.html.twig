{% extends 'admin/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block main_content %}
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">{{ page_title }}</h1>
            <p class="text-gray-600">Update user information and account settings</p>
        </div>
        <div class="flex space-x-3 mt-4 sm:mt-0">
            <a href="{{ path('admin_users_view', {id: user.id}) }}" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-xl shadow-sm transition duration-200 ease-in-out transform hover:scale-105">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                View User
            </a>
            <a href="{{ app.request.headers.get('referer') ?: path('admin_users_all') }}" class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-semibold rounded-xl border border-gray-300 transition duration-200 ease-in-out">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                </svg>
                Back to Users
            </a>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for flash_message in app.flashes('success') %}
        <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-4 rounded-lg">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <p class="text-green-700 font-medium">{{ flash_message }}</p>
            </div>
        </div>
    {% endfor %}

    {% for flash_message in app.flashes('error') %}
        <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-4 rounded-lg">
            <div class="flex items-center">
                <svg class="w-5 h-5 text-red-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                </svg>
                <p class="text-red-700 font-medium">{{ flash_message }}</p>
            </div>
        </div>
    {% endfor %}

    {{ form_start(form, {'action': path('admin_users_edit', {'id': user.id}), 'attr': {'novalidate': 'novalidate', 'class': 'space-y-4', 'autocomplete': 'off'}}) }}

    <!-- User Profile Header -->
    <div class="bg-white shadow-lg rounded-xl overflow-hidden mb-4">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 px-6 py-4">
            <div class="flex items-center space-x-4">
                <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center text-white text-lg font-bold shadow-lg ring-2 ring-white/30">
                    {{ user.firstName ? user.firstName|first|upper : user.username|first|upper }}{{ user.lastName ? user.lastName|first|upper : '' }}
                </div>
                <div>
                    <h2 class="text-xl font-bold text-white">{{ user.fullName ?: user.username }}</h2>
                    <p class="text-blue-100 text-sm">Editing user profile</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Sections in Two Columns -->
    <div class="flex gap-[20px] flex-row items-start">
        <!-- Left Column -->
        <div class="flex-1 space-y-4">
            <!-- Basic Information -->
            <div class="bg-white shadow-lg rounded-xl p-5">
                <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center border-b pb-3">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    Basic Information
                </h3>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.username, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div>
                            {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.employeeId, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.employeeId, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.employeeId) }}
                        </div>
                        <div>
                            {{ form_label(form.position, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.position, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.position) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assignment Information -->
            <div class="bg-white shadow-lg rounded-xl p-5">
                <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center border-b pb-3">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    Department & Role
                </h3>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            {{ form_label(form.role, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.role, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.role) }}
                        </div>
                        <div>
                            {{ form_label(form.departmentId, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                            {{ form_widget(form.departmentId, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
                            {{ form_errors(form.departmentId) }}
                            <small class="text-gray-500 text-xs mt-1 block">Enter Department ID number</small>
                        </div>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div class="bg-gray-50 rounded-lg p-3">
                            <label class="block text-xs font-medium text-gray-500 mb-1">Current Department</label>
                            <p class="text-gray-900 font-semibold">{{ user.department ? user.department.name : 'Not assigned' }}</p>
                        </div>
                        <div class="bg-gray-50 rounded-lg p-3">
                            <label class="block text-xs font-medium text-gray-500 mb-1">Current College</label>
                            <p class="text-gray-900 font-semibold">{{ user.college ? user.college.name : 'Not assigned' }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column -->
        <div class="flex-1 space-y-4">
            <!-- Password Reset Section -->
            <div class="bg-white shadow-lg rounded-xl p-5">
                <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center border-b pb-3">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                    </svg>
                    Password Reset (Optional)
                </h3>
                <p class="text-sm text-gray-500 mb-4">Leave blank to keep current password</p>
                
                <div class="space-y-4">
                    <div>
                        {{ form_label(form.newPassword.first, 'New Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        <div class="flex gap-2">
                            {{ form_widget(form.newPassword.first, {'attr': {'class': 'flex-1 px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Enter new password'}}) }}
                            <button type="button" onclick="generatePassword()" class="px-4 py-2 bg-indigo-50 hover:bg-indigo-100 text-indigo-700 rounded-lg transition text-sm font-semibold whitespace-nowrap">
                                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                                </svg>
                                Generate
                            </button>
                        </div>
                        {{ form_errors(form.newPassword.first) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.newPassword.second, 'Confirm Password', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                        {{ form_widget(form.newPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500', 'placeholder': 'Confirm new password'}}) }}
                        {{ form_errors(form.newPassword.second) }}
                    </div>
                </div>
            </div>

            <!-- Account Status -->
            <div class="bg-white shadow-lg rounded-xl p-5">
                <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center border-b pb-3">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Account Status
                </h3>
                <div class="flex items-center justify-between bg-gray-50 rounded-lg p-4">
                    <div class="flex items-center">
                        {{ form_widget(form.isActive, {'attr': {'class': 'w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500'}}) }}
                        <label for="{{ form.isActive.vars.id }}" class="ml-3 text-sm font-medium text-gray-700">{{ form.isActive.vars.label }}</label>
                    </div>
                    {% if user.isActive %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            Currently Active
                        </span>
                    {% else %}
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-100 text-gray-800">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L10 8.586l1.293-1.293a1 1 0 011.414 1.414L11.414 10l1.293 1.293a1 1 0 01-1.414 1.414L10 11.414l-1.293 1.293a1 1 0 01-1.414-1.414L9.586 10 8.293 8.707z" clip-rule="evenodd"/>
                            </svg>
                            Currently Inactive
                        </span>
                    {% endif %}
                </div>
                {{ form_errors(form.isActive) }}
            </div>

            <!-- User Activity -->
            <div class="bg-white shadow-lg rounded-xl p-5">
                <h3 class="text-base font-semibold text-gray-900 mb-4 flex items-center border-b pb-3">
                    <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Activity Timeline
                </h3>
                <div class="space-y-3">
                    <div class="bg-gray-50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 mb-1">Account Created</p>
                        <p class="text-gray-900 font-semibold">
                            {% if user.createdAt %}
                                {{ user.createdAt|date('F j, Y') }}
                                <span class="block text-xs text-gray-500 font-normal mt-0.5">{{ user.createdAt|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">N/A</span>
                            {% endif %}
                        </p>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 mb-1">Last Updated</p>
                        <p class="text-gray-900 font-semibold">
                            {% if user.updatedAt %}
                                {{ user.updatedAt|date('F j, Y') }}
                                <span class="block text-xs text-gray-500 font-normal mt-0.5">{{ user.updatedAt|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">Never updated</span>
                            {% endif %}
                        </p>
                    </div>
                    <div class="bg-gray-50 rounded-lg p-3">
                        <p class="text-xs font-medium text-gray-500 mb-1">Last Login</p>
                        <p class="text-gray-900 font-semibold">
                            {% if user.lastLogin %}
                                {{ user.lastLogin|date('F j, Y') }}
                                <span class="block text-xs text-gray-500 font-normal mt-0.5">{{ user.lastLogin|date('g:i A') }}</span>
                            {% else %}
                                <span class="text-gray-500">Never logged in</span>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex justify-between items-center mt-6 bg-white shadow-lg rounded-xl p-5">
        <a href="{{ app.request.headers.get('referer') ?: path('admin_users_all') }}" class="inline-flex items-center px-6 py-3 bg-gray-100 hover:bg-gray-200 text-gray-700 text-sm font-semibold rounded-lg border border-gray-300 transition duration-200">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
            Cancel
        </a>
        <button type="submit" class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded-lg shadow-md hover:shadow-lg transition duration-200 transform hover:scale-105">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Update User
        </button>
    </div>

    {{ form_end(form) }}

{% block javascripts %}
{{ parent() }}
<script>
// Generate random password
function generatePassword() {
    const length = 12;
    const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*";
    let password = "";
    for (let i = 0, n = charset.length; i < length; ++i) {
        password += charset.charAt(Math.floor(Math.random() * n));
    }
    
    const firstPasswordField = document.querySelector('input[id$="_newPassword_first"]');
    const secondPasswordField = document.querySelector('input[id$="_newPassword_second"]');
    
    if (firstPasswordField && secondPasswordField) {
        firstPasswordField.value = password;
        secondPasswordField.value = password;
        
        // Show password temporarily
        const originalType = firstPasswordField.type;
        firstPasswordField.type = 'text';
        secondPasswordField.type = 'text';
        
        setTimeout(() => {
            firstPasswordField.type = originalType;
            secondPasswordField.type = originalType;
        }, 3000);
    }
}
</script>
{% endblock %}

{% endblock %}
