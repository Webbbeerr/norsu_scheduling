{% extends 'admin/base.html.twig' %}

{% block title %}Teaching History - {{ faculty.fullName }}{% endblock %}

{% block main_content %}
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
            <div>
                <h1 class="text-3xl font-bold text-gray-900">Teaching History</h1>
                <p class="mt-1 text-sm text-gray-600">{{ faculty.fullName }} ({{ faculty.employeeId ?: 'No ID' }})</p>
                <p class="text-sm text-gray-500">{{ faculty.email }}</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ path('admin_history') }}" class="inline-flex items-center px-4 py-2 border border-teal-600 rounded-lg shadow-sm text-sm font-medium text-teal-700 bg-white hover:bg-teal-50 transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    Back to History & Reports
                </a>
                <a href="{{ path('admin_users_faculty') }}" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    All Faculty
                </a>
            </div>
        </div>
    </div>

    <!-- Filter and Export Section -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
        <form method="GET" action="{{ path('admin_users_faculty_history', {id: faculty.id}) }}" class="flex flex-wrap gap-4">
            <!-- Academic Year Filter -->
            <div class="flex-1 min-w-[200px]">
                <label for="year" class="block text-sm font-medium text-gray-700 mb-1">Academic Year</label>
                <select name="year" id="year" class="block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Years</option>
                    {% for year in academicYears %}
                        <option value="{{ year.id }}" {% if yearFilter == year.id %}selected{% endif %}>{{ year.year }}</option>
                    {% endfor %}
                </select>
            </div>

            <!-- Semester Filter -->
            <div class="flex-1 min-w-[200px]">
                <label for="semester" class="block text-sm font-medium text-gray-700 mb-1">Semester</label>
                <select name="semester" id="semester" class="block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500">
                    <option value="">All Semesters</option>
                    <option value="1st" {% if semesterFilter == '1st' %}selected{% endif %}>1st Semester</option>
                    <option value="2nd" {% if semesterFilter == '2nd' %}selected{% endif %}>2nd Semester</option>
                    <option value="Summer" {% if semesterFilter == 'Summer' %}selected{% endif %}>Summer</option>
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-end gap-2">
                <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-200 transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"/>
                    </svg>
                    Filter
                </button>
                <a href="{{ path('admin_users_faculty_history_export', {id: faculty.id, year: yearFilter, semester: semesterFilter}) }}" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:ring-4 focus:ring-green-200 transition-colors">
                    <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    Export CSV
                </a>
            </div>
        </form>
    </div>

    <!-- Workload Summary by Semester -->
    {% if workloadBySemester is not empty %}
    <div class="bg-gradient-to-r from-blue-50 to-purple-50 border border-blue-200 rounded-xl p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            Workload Summary
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for key, workload in workloadBySemester %}
                <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-gray-700">{{ workload.year }}</span>
                        <span class="px-2 py-1 text-xs font-semibold rounded-full 
                            {% if workload.semester == '1st' %}bg-blue-100 text-blue-800
                            {% elseif workload.semester == '2nd' %}bg-green-100 text-green-800
                            {% elseif workload.semester == 'Summer' %}bg-yellow-100 text-yellow-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ workload.semester }}
                        </span>
                    </div>
                    <div class="space-y-1">
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Total Units:</span>
                            <span class="font-bold text-gray-900">{{ workload.total_units }}</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Subjects:</span>
                            <span class="font-semibold text-gray-900">{{ workload.subjects|length }}</span>
                        </div>
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Schedules:</span>
                            <span class="font-semibold text-gray-900">{{ workload.schedule_count }}</span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <!-- Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-blue-50 border border-blue-200 rounded-xl p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-blue-900">Total Schedules</p>
                    <p class="text-2xl font-bold text-blue-700">{{ teachingHistory|length }}</p>
                </div>
            </div>
        </div>

        <div class="bg-purple-50 border border-purple-200 rounded-xl p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-purple-900">Unique Subjects</p>
                    <p class="text-2xl font-bold text-purple-700">{{ uniqueSubjectCount }}</p>
                </div>
            </div>
        </div>

        <div class="bg-green-50 border border-green-200 rounded-xl p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <svg class="h-8 w-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-green-900">Rooms Used</p>
                    <p class="text-2xl font-bold text-green-700">{{ uniqueRoomCount }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Teaching History Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-5 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Teaching History</h3>
        </div>
        <div class="overflow-x-auto">
            {% if teachingHistory is empty %}
                <div class="px-6 py-12 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No teaching history found</h3>
                    <p class="mt-1 text-sm text-gray-500">This faculty member has not been assigned to any subjects yet{% if yearFilter or semesterFilter %} with the current filters{% endif %}.</p>
                </div>
            {% else %}
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Academic Year</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Semester</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Subject</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Section</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Room</th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Schedule</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for schedule in teachingHistory %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    {{ schedule.academicYear ? schedule.academicYear.year : 'N/A' }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full 
                                        {% if schedule.semester == '1st' %}bg-blue-100 text-blue-800
                                        {% elseif schedule.semester == '2nd' %}bg-green-100 text-green-800
                                        {% elseif schedule.semester == 'Summer' %}bg-yellow-100 text-yellow-800
                                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                                        {{ schedule.semester ?: 'N/A' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="font-medium text-gray-900">{{ schedule.subject ? schedule.subject.code : 'N/A' }}</div>
                                    <div class="text-gray-500">{{ schedule.subject ? schedule.subject.title : '' }}</div>
                                    {% if schedule.subject %}
                                        <div class="text-xs text-blue-600 mt-1">{{ schedule.subject.units }} {{ schedule.subject.units == 1 ? 'unit' : 'units' }}</div>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                    {{ schedule.section ?: 'N/A' }}
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">
                                    {% if schedule.room %}
                                        <div class="font-medium">{{ schedule.room.code }}{% if schedule.room.name %} - {{ schedule.room.name }}{% endif %}</div>
                                        <div class="text-gray-500 text-xs">{{ schedule.room.building }}</div>
                                    {% else %}
                                        <span class="text-gray-400 italic">No room</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-900">
                                    <div>{{ schedule.dayPattern ?: 'N/A' }}</div>
                                    <div class="text-gray-500 text-xs">
                                        {{ schedule.startTime ? schedule.startTime|date('g:i A') : 'N/A' }} - {{ schedule.endTime ? schedule.endTime|date('g:i A') : 'N/A' }}
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
