{% extends 'faculty/base.html.twig' %}

{% block title %}Profile & Settings - Smart Scheduling System{% endblock %}

{% block page_title %}Profile & Settings{% endblock %}

{% block main_content %}
    <div class="max-w-5xl mx-auto">
        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
            <div class="mb-4 rounded-lg bg-green-50 p-4 border border-green-200">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-green-800">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="mb-4 rounded-lg bg-red-50 p-4 border border-red-200">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm font-medium text-red-800">{{ message }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
        
        <!-- Profile Header -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8 mb-8">
            <div class="flex flex-col md:flex-row items-start md:items-center gap-6">
                <div class="w-24 h-24 gradient-primary rounded-full flex items-center justify-center text-white text-3xl font-bold">
                    {{ app.user.firstName[:1] }}{{ app.user.lastName[:1] }}
                </div>
                <div class="flex-1">
                    <h1 class="text-2xl font-bold text-gray-900">{{ app.user.fullName }}</h1>
                    <p class="text-gray-600 mt-1">{{ app.user.email }}</p>
                    <div class="flex flex-wrap gap-2 mt-3">
                        <span class="px-3 py-1 bg-blue-100 text-blue-700 text-sm rounded-full">Faculty Member</span>
                        <span class="px-3 py-1 bg-green-100 text-green-700 text-sm rounded-full">{{ app.user.isActive ? 'Active' : 'Inactive' }}</span>
                        {% if app.user.department %}
                            <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm rounded-full">{{ app.user.department.name }}</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabs -->
        {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="mb-6" x-data="{ activeTab: 'personal' }">
            <div class="border-b border-gray-200">
                <nav class="-mb-px flex space-x-8">
                    <button type="button" @click="activeTab = 'personal'" :class="activeTab === 'personal' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                        Personal Information
                    </button>
                    <button type="button" @click="activeTab = 'academic'" :class="activeTab === 'academic' ? 'border-blue-500 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'" class="whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm transition-colors">
                        Academic Info
                    </button>
                </nav>
            </div>

            <!-- Personal Information Tab -->
            <div x-show="activeTab === 'personal'" class="mt-6">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6">Personal Information</h2>
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                {{ form_label(form.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                {{ form_widget(form.firstName) }}
                                {{ form_errors(form.firstName) }}
                            </div>
                            <div>
                                {{ form_label(form.middleName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                {{ form_widget(form.middleName) }}
                                {{ form_errors(form.middleName) }}
                            </div>
                            <div>
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                {{ form_widget(form.lastName) }}
                                {{ form_errors(form.lastName) }}
                            </div>
                        </div>

                        <div>
                            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div>
                            {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.address) }}
                            {{ form_errors(form.address) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Academic Information Tab -->
            <div x-show="activeTab === 'academic'" class="mt-6">
                <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6">Academic Information</h2>
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Employee ID</label>
                                <input type="text" value="{{ app.user.employeeId ?? 'Not set' }}" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50" readonly>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                                <input type="text" value="{{ app.user.department ? app.user.department.name : 'Not assigned' }}" class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50" readonly>
                            </div>
                        </div>

                        <div>
                            {{ form_label(form.position, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.position) }}
                            {{ form_errors(form.position) }}
                        </div>

                        <div>
                            {{ form_label(form.otherDesignation, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                            {{ form_widget(form.otherDesignation) }}
                            {{ form_errors(form.otherDesignation) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="flex justify-end gap-3 pt-4">
                <a href="{{ path('faculty_dashboard') }}" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    Cancel
                </a>
                <button type="submit" class="px-6 py-2 gradient-primary text-white rounded-lg hover:opacity-90 transition-opacity">
                    Save Changes
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
