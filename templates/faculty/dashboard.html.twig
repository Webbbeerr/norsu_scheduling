{% extends 'faculty/base.html.twig' %}

{% block title %}Faculty Dashboard - Smart Scheduling System{% endblock %}

{% block page_title %}Dashboard{% endblock %}

{% block main_content %}
    <!-- Welcome Section -->
    <div class="mb-8">
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 overflow-hidden">
            <div class="gradient-bg px-8 py-12 text-white relative">
                <div class="absolute inset-0 bg-black bg-opacity-10"></div>
                <div class="relative">
                    <h1 class="text-3xl font-bold mb-2">Welcome back, {{ app.user.firstName }}! ðŸ‘‹</h1>
                    <p class="text-lg opacity-90">{{ app.user.department ? app.user.department.name : 'Faculty' }} Department</p>
                    <p class="text-sm opacity-75 mt-1">Here's your schedule overview for today</p>
                </div>
                <div class="absolute -bottom-6 -right-6 opacity-20">
                    <svg class="w-32 h-32" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Teaching Load -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-primary absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Teaching Load</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ totalHours }} hrs</p>
                        <p class="text-sm {% if totalHours <= 24 %}text-blue-600{% else %}text-amber-600{% endif %} mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {% if totalHours <= 24 %}Within limit{% else %}Above normal{% endif %}
                        </p>
                    </div>
                    <div class="gradient-primary p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Classes -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-success absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Active Classes</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ activeClasses }}</p>
                        <p class="text-sm text-green-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                            </svg>
                            {{ totalStudents }} students
                        </p>
                    </div>
                    <div class="gradient-success p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Classes -->
        <div class="stats-card bg-white rounded-2xl shadow-sm border border-gray-100 p-6 relative overflow-hidden">
            <div class="gradient-warning absolute inset-0 opacity-5"></div>
            <div class="relative">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Today's Classes</p>
                        <p class="text-3xl font-bold text-gray-900 mt-1">{{ todayCount }}</p>
                        <p class="text-sm text-amber-600 mt-2 flex items-center">
                            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                            {% if todaySchedules|length > 0 %}
                                Next at {{ todaySchedules[0].startTime|date('g:i A') }}
                            {% else %}
                                No classes today
                            {% endif %}
                        </p>
                    </div>
                    <div class="gradient-warning p-4 rounded-xl">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Left Column - Today's Schedule and Quick Actions -->
        <div class="lg:col-span-2 space-y-8">
            <!-- Today's Schedule -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-semibold text-gray-900">Today's Schedule</h2>
                    <a href="{{ path('faculty_schedule') }}" class="text-sm text-blue-600 hover:text-blue-700 font-medium transition-colors">View Full Schedule</a>
                </div>

                {% if todaySchedules|length > 0 %}
                    {% set now = "now"|date('H:i') %}
                    {% set upcomingSchedules = [] %}
                    {% set inProgressSchedules = [] %}
                    {% set completedSchedules = [] %}
                    
                    {# Categorize schedules based on time #}
                    {% for schedule in todaySchedules %}
                        {% set startTime = schedule.startTime|date('H:i') %}
                        {% set endTime = schedule.endTime|date('H:i') %}
                        
                        {% if startTime > now %}
                            {% set upcomingSchedules = upcomingSchedules|merge([schedule]) %}
                        {% elseif startTime <= now and endTime > now %}
                            {% set inProgressSchedules = inProgressSchedules|merge([schedule]) %}
                        {% else %}
                            {% set completedSchedules = completedSchedules|merge([schedule]) %}
                        {% endif %}
                    {% endfor %}
                    
                    <div class="space-y-6">
                        {# In Progress Classes #}
                        {% if inProgressSchedules|length > 0 %}
                            <div>
                                <h3 class="text-sm font-semibold text-blue-600 mb-3 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                                        <circle cx="12" cy="12" r="10" fill="currentColor" opacity="0.2"/>
                                        <circle cx="12" cy="12" r="3" fill="currentColor"/>
                                    </svg>
                                    In Progress
                                </h3>
                                <div class="space-y-3">
                                    {% for schedule in inProgressSchedules %}
                                        <div class="flex items-start p-4 bg-blue-50 border-2 border-blue-400 rounded-xl hover:shadow-md transition-shadow relative">
                                            <div class="absolute -top-2 -right-2">
                                                <span class="flex h-5 w-5">
                                                    <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
                                                    <span class="relative inline-flex rounded-full h-5 w-5 bg-blue-500"></span>
                                                </span>
                                            </div>
                                            <div class="flex-shrink-0 w-20 text-center">
                                                <div class="text-sm font-semibold text-blue-600">{{ schedule.startTime|date('g:i A') }}</div>
                                                <div class="text-xs text-gray-500">{{ schedule.endTime|date('g:i A') }}</div>
                                            </div>
                                            <div class="flex-1 ml-4">
                                                <h4 class="text-sm font-semibold text-gray-900">
                                                    {{ schedule.subject.code }} - {{ schedule.subject.title }}
                                                </h4>
                                                <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                                        </svg>
                                                        {{ schedule.enrolledStudents }} students
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                                        </svg>
                                                        {{ schedule.room.name }}
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                        </svg>
                                                        {{ schedule.room.type|capitalize }}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex-shrink-0 ml-4">
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 border border-blue-200">
                                                    <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 24 24">
                                                        <circle cx="12" cy="12" r="10"/>
                                                    </svg>
                                                    In Progress
                                                </span>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {# Upcoming Classes #}
                        {% if upcomingSchedules|length > 0 %}
                            <div>
                                <h3 class="text-sm font-semibold text-green-600 mb-3 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    Upcoming
                                </h3>
                                <div class="space-y-3">
                                    {% for schedule in upcomingSchedules %}
                                        <div class="flex items-start p-4 bg-green-50 border border-green-200 rounded-xl hover:shadow-md transition-shadow">
                                            <div class="flex-shrink-0 w-20 text-center">
                                                <div class="text-sm font-semibold text-green-600">{{ schedule.startTime|date('g:i A') }}</div>
                                                <div class="text-xs text-gray-500">{{ schedule.endTime|date('g:i A') }}</div>
                                            </div>
                                            <div class="flex-1 ml-4">
                                                <h4 class="text-sm font-semibold text-gray-900">
                                                    {{ schedule.subject.code }} - {{ schedule.subject.title }}
                                                </h4>
                                                <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-600">
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                                        </svg>
                                                        {{ schedule.enrolledStudents }} students
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                                        </svg>
                                                        {{ schedule.room.name }}
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                        </svg>
                                                        {{ schedule.room.type|capitalize }}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex-shrink-0 ml-4">
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                                    Upcoming
                                                </span>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}

                        {# Completed Classes #}
                        {% if completedSchedules|length > 0 %}
                            <div>
                                <h3 class="text-sm font-semibold text-gray-500 mb-3 flex items-center">
                                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </svg>
                                    Completed
                                </h3>
                                <div class="space-y-3">
                                    {% for schedule in completedSchedules %}
                                        <div class="flex items-start p-4 bg-gray-50 border border-gray-200 rounded-xl opacity-75 hover:opacity-100 transition-opacity">
                                            <div class="flex-shrink-0 w-20 text-center">
                                                <div class="text-sm font-semibold text-gray-500">{{ schedule.startTime|date('g:i A') }}</div>
                                                <div class="text-xs text-gray-400">{{ schedule.endTime|date('g:i A') }}</div>
                                            </div>
                                            <div class="flex-1 ml-4">
                                                <h4 class="text-sm font-semibold text-gray-700">
                                                    {{ schedule.subject.code }} - {{ schedule.subject.title }}
                                                </h4>
                                                <div class="mt-2 flex flex-wrap gap-3 text-xs text-gray-500">
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                                                        </svg>
                                                        {{ schedule.enrolledStudents }} students
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                                                        </svg>
                                                        {{ schedule.room.name }}
                                                    </span>
                                                    <span class="flex items-center">
                                                        <svg class="w-4 h-4 mr-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                                        </svg>
                                                        {{ schedule.room.type|capitalize }}
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex-shrink-0 ml-4">
                                                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-200 text-gray-600">
                                                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                    Completed
                                                </span>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    <div class="text-center py-12">
                        <svg class="w-16 h-16 mx-auto text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                        </svg>
                        <p class="text-gray-500 text-lg font-medium">No Classes Today</p>
                        <p class="text-gray-400 text-sm mt-2">Enjoy your day off!</p>
                    </div>
                {% endif %}
            </div>

            <!-- Quick Actions -->
            <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-8">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Quick Actions</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4">
                    <a href="{{ path('faculty_schedule') }}" class="group p-6 bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl border border-blue-100 hover:border-blue-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-primary p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">View Schedule</h3>
                        <p class="text-sm text-gray-600">See your complete teaching schedule</p>
                    </a>

                    <a href="{{ path('faculty_classes') }}" class="group p-6 bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl border border-green-100 hover:border-green-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-success p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">My Classes</h3>
                        <p class="text-sm text-gray-600">Manage your classes</p>
                    </a>

                    <a href="{{ path('faculty_performance') }}" class="group p-6 bg-gradient-to-br from-rose-50 to-red-50 rounded-xl border border-rose-100 hover:border-rose-200 transition-all duration-200 hover:shadow-md">
                        <div class="gradient-danger p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">Performance</h3>
                        <p class="text-sm text-gray-600">View your analytics</p>
                    </a>

                    <a href="{{ path('faculty_profile') }}" class="group p-6 bg-gradient-to-br from-cyan-50 to-blue-50 rounded-xl border border-cyan-100 hover:border-cyan-200 transition-all duration-200 hover:shadow-md">
                        <div style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);" class="p-3 rounded-lg w-fit mb-4 group-hover:scale-110 transition-transform duration-200">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                            </svg>
                        </div>
                        <h3 class="font-semibold text-gray-900 mb-2">My Profile</h3>
                        <p class="text-sm text-gray-600">Update your information</p>
                    </a>
                </div>
            </div>
