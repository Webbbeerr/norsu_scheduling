<!DOCTYPE html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Smart Scheduling System{% endblock %}</title>
        <link rel="icon" type="image/svg+xml" href="{{ asset('images/norsu-logo.svg') }}">
        
        <!-- Tailwind CSS -->
        <link href="/build/app.css" rel="stylesheet">
        
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="h-full bg-gray-50 font-sans antialiased">
        <div id="app" class="min-h-full">
            {% block body %}
                <!-- Default content structure for scheduling system -->
                <nav class="bg-white shadow-sm border-b border-gray-200">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="flex justify-between h-16">
                            <div class="flex items-center">
                                <h1 class="text-xl font-semibold text-gray-900">
                                    {% block page_title %}Smart Scheduling System{% endblock %}
                                </h1>
                            </div>
                            <div class="flex items-center space-x-4">
                                {% block navigation %}
                                    <!-- Navigation items will go here -->
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </nav>

                <main class="flex-1">
                    {% block content %}
                        <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
                            <div class="px-4 py-6 sm:px-0">
                                <!-- Page content goes here -->
                            </div>
                        </div>
                    {% endblock %}
                </main>
            {% endblock %}
        </div>
        
        {% block footer_javascripts %}
        {% endblock %}
    </body>
</html>
